---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
}

const { 
  title = "Aloha Media Studio | Premier Media Production in Eagle, Idaho",
  description = "Your story. Our craft. Professional video production, photography, podcasting, and branding services in Eagle, Idaho. Part of the Aloha Publishing family."
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/logo/aloha-media-logo.png" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://alohamediastudio.com" />
    <meta property="og:image" content="https://alohamediastudio.com/images/logo/aloha-media-logo.png" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
    
    <!-- Schema.org Local Business -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Aloha Media Studio",
      "description": "Professional video production, photography, podcasting, and branding services",
      "url": "https://alohamediastudio.com",
      "logo": "https://alohamediastudio.com/images/logo/aloha-media-logo.png",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Eagle",
        "addressRegion": "ID",
        "addressCountry": "US"
      },
      "openingHours": "Mo-Fr 10:00-17:00",
      "sameAs": [
        "https://instagram.com/alohamediastudio",
        "https://youtube.com/@alohamediastudio"
      ],
      "parentOrganization": {
        "@type": "Organization",
        "name": "Aloha Publishing",
        "url": "https://alohapublishing.com"
      }
    }
    </script>
  </head>
  <body class="antialiased bg-[var(--color-void)] relative">
    <!-- Ambient gradient for visual continuity -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden" aria-hidden="true" style="z-index: 0;">
      <!-- Top-left retro blue glow -->
      <div class="absolute -top-[20vh] -left-[10vw] w-[70vw] h-[70vh] rounded-full blur-[150px]" style="background: rgba(74, 124, 155, 0.25);"></div>
      <!-- Center-right coral glow -->
      <div class="absolute top-[40vh] -right-[10vw] w-[60vw] h-[60vh] rounded-full blur-[120px]" style="background: rgba(224, 123, 91, 0.2);"></div>
      <!-- Bottom-left gold glow -->
      <div class="absolute bottom-[10vh] left-[5vw] w-[50vw] h-[50vh] rounded-full blur-[100px]" style="background: rgba(201, 169, 98, 0.15);"></div>
    </div>

    <!-- Page content -->
    <div class="relative z-10">
      <slot />
    </div>
    
    <!-- Initialize animations -->
    <script>
      import { initAllAnimations } from '../scripts/animations'
      
      // Wait for DOM to be ready
      document.addEventListener('DOMContentLoaded', () => {
        // Small delay to ensure all elements are rendered
        requestAnimationFrame(() => {
          initAllAnimations()
        })
      })
    </script>
  </body>
</html>
