---
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
---

<Layout
  title="The Edit | Aloha Media Studio"
  description="Our podcast is coming soon. Season One of The Edit is currently in production."
>
  <Header />

  <main>
    <!-- Hero - Coming Soon -->
    <section class="min-h-[80vh] flex items-center justify-center bg-[var(--color-void)] relative overflow-hidden">
      <!-- Background gradient -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] md:w-[600px] h-[400px] md:h-[600px] bg-[var(--color-coral)]/10 rounded-full blur-[120px]"></div>

      <div class="max-w-3xl mx-auto px-6 text-center relative z-10">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-[var(--color-charcoal)] border border-[var(--color-graphite)] rounded-full mb-8" data-animate="fade-up">
          <span class="w-2 h-2 bg-[var(--color-coral)] rounded-full animate-pulse"></span>
          <span class="text-sm text-[var(--color-mist)]">Under Construction</span>
        </div>

        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-[var(--color-cream)] mb-6" data-animate="fade-up">
          The Edit
        </h1>

        <p class="text-xl md:text-2xl text-[var(--color-mist)] mb-4" data-animate="fade-up">
          Our podcast is coming soon.
        </p>

        <p class="text-base md:text-lg text-[var(--color-stone)] mb-12 max-w-xl mx-auto" data-animate="fade-up">
          We're currently creating Season One. Stay tuned.
        </p>

        <!-- Podcast icon -->
        <div class="mb-12" data-animate="fade-up">
          <div class="inline-flex items-center justify-center w-24 h-24 md:w-32 md:h-32 bg-[var(--color-charcoal)] border border-[var(--color-graphite)] rounded-2xl">
            <svg class="w-12 h-12 md:w-16 md:h-16 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
            </svg>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center" data-animate="fade-up">
          <a
            href="/"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold rounded-xl hover:bg-[var(--color-coral-light)] transition-colors"
          >
            Back to Home
          </a>
          <a
            href="/full-studio"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 border border-[var(--color-graphite)] text-[var(--color-cream)] font-semibold rounded-xl hover:border-[var(--color-coral)] hover:text-[var(--color-coral)] transition-colors"
          >
            See Our Services
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
