---
import { getCollection, type CollectionEntry } from 'astro:content'
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'

export async function getStaticPaths() {
  const posts = await getCollection('the-edit')
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

type Props = {
  post: CollectionEntry<'the-edit'>
}

const { post } = Astro.props
const { Content } = await post.render()

const categoryLabels: Record<string, string> = {
  'tutorial': 'Tutorial',
  'behind-the-scenes': 'Behind the Scenes',
  'tips': 'Tips & Tricks',
  'gear': 'Gear Guide',
  'story': 'Story',
}

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  })
}

// Get related posts (same category, excluding current)
const allPosts = await getCollection('the-edit', ({ data }) => data.draft !== true)
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug && p.data.category === post.data.category)
  .slice(0, 3)
---

<Layout 
  title={`${post.data.title} | The Edit | Aloha Media Studio`}
  description={post.data.description}
>
  <Header />
  
  <main class="pt-24">
    <!-- Article Header -->
    <section class="py-12 md:py-20 bg-[var(--color-void)]">
      <div class="max-w-4xl mx-auto px-6">
        <!-- Breadcrumb -->
        <nav class="mb-8" data-animate="fade-up">
          <ol class="flex items-center gap-2 text-sm text-[var(--color-stone)]">
            <li>
              <a href="/" class="hover:text-[var(--color-coral)] transition-colors">Home</a>
            </li>
            <li>/</li>
            <li>
              <a href="/the-edit" class="hover:text-[var(--color-coral)] transition-colors">The Edit</a>
            </li>
            <li>/</li>
            <li class="text-[var(--color-mist)] truncate max-w-[200px]">{post.data.title}</li>
          </ol>
        </nav>
        
        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-4 mb-6" data-animate="fade-up">
          <span class="px-3 py-1 bg-[var(--color-coral)]/10 text-[var(--color-coral)] text-xs font-semibold rounded-full uppercase tracking-wider">
            {categoryLabels[post.data.category] || post.data.category}
          </span>
          <span class="text-[var(--color-stone)] text-sm">
            {formatDate(post.data.publishDate)}
          </span>
          {post.data.updatedDate && (
            <span class="text-[var(--color-stone)] text-sm">
              (Updated {formatDate(post.data.updatedDate)})
            </span>
          )}
        </div>
        
        <!-- Title -->
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-[var(--color-cream)] mb-6 leading-tight" data-animate="fade-up">
          {post.data.title}
        </h1>
        
        <!-- Description -->
        <p class="text-xl text-[var(--color-mist)] leading-relaxed max-w-3xl" data-animate="fade-up">
          {post.data.description}
        </p>
        
        <!-- Author -->
        <div class="flex items-center gap-4 mt-8 pt-8 border-t border-[var(--color-graphite)]" data-animate="fade-up">
          <div class="w-12 h-12 rounded-full bg-[var(--color-coral)] flex items-center justify-center">
            <span class="text-[var(--color-void)] font-bold text-lg">
              {post.data.author.charAt(0)}
            </span>
          </div>
          <div>
            <p class="text-[var(--color-cream)] font-medium">{post.data.author}</p>
            <p class="text-[var(--color-stone)] text-sm">Aloha Media Studio</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Featured Image -->
    {post.data.image && (
      <section class="bg-[var(--color-charcoal)]">
        <div class="max-w-5xl mx-auto">
          <img 
            src={post.data.image} 
            alt={post.data.imageAlt || post.data.title}
            class="w-full h-auto"
          />
        </div>
      </section>
    )}
    
    <!-- Article Content -->
    <article class="py-12 md:py-20 bg-[var(--color-charcoal)]">
      <div class="max-w-3xl mx-auto px-6">
        <div class="prose prose-lg prose-invert" data-animate="fade-up">
          <Content />
        </div>
      </div>
    </article>
    
    <!-- Tags -->
    {post.data.tags && post.data.tags.length > 0 && (
      <section class="py-8 bg-[var(--color-charcoal)] border-t border-[var(--color-graphite)]">
        <div class="max-w-3xl mx-auto px-6">
          <div class="flex flex-wrap items-center gap-3">
            <span class="text-[var(--color-stone)] text-sm">Tags:</span>
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-[var(--color-slate)] text-[var(--color-mist)] text-sm rounded-full">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="py-16 bg-[var(--color-void)]">
        <div class="max-w-5xl mx-auto px-6">
          <h2 class="text-2xl font-bold text-[var(--color-cream)] mb-8" data-animate="fade-up">
            More in {categoryLabels[post.data.category] || post.data.category}
          </h2>
          
          <div class="grid md:grid-cols-3 gap-6" data-animate-stagger>
            {relatedPosts.map((related) => (
              <a 
                href={`/the-edit/${related.slug}`}
                class="group block"
                data-animate-child
              >
                <article class="h-full p-5 bg-[var(--color-charcoal)] rounded-xl border border-[var(--color-graphite)] hover:border-[var(--color-coral)]/30 transition-all duration-300">
                  <span class="text-[var(--color-stone)] text-xs">
                    {formatDate(related.data.publishDate)}
                  </span>
                  <h3 class="text-lg font-semibold text-[var(--color-cream)] mt-2 mb-2 group-hover:text-[var(--color-coral)] transition-colors line-clamp-2">
                    {related.data.title}
                  </h3>
                  <p class="text-[var(--color-mist)] text-sm line-clamp-2">
                    {related.data.description}
                  </p>
                </article>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- Back to The Edit -->
    <section class="py-12 bg-[var(--color-void)] border-t border-[var(--color-graphite)]">
      <div class="max-w-3xl mx-auto px-6 text-center">
        <a 
          href="/the-edit"
          class="inline-flex items-center gap-2 text-[var(--color-coral)] font-medium hover:gap-4 transition-all"
        >
          <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
          Back to The Edit
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  /* Prose styling for markdown content */
  .prose {
    color: var(--color-mist);
  }
  
  .prose h2 {
    color: var(--color-cream);
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    color: var(--color-cream);
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .prose h4 {
    color: var(--color-cream);
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.8;
  }
  
  .prose a {
    color: var(--color-coral);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .prose a:hover {
    color: var(--color-coral-light);
  }
  
  .prose strong {
    color: var(--color-cream);
    font-weight: 600;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose ul li::marker {
    color: var(--color-coral);
  }
  
  .prose ol li::marker {
    color: var(--color-coral);
    font-weight: 600;
  }
  
  .prose blockquote {
    border-left: 4px solid var(--color-coral);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-stone);
  }
  
  .prose code {
    background: var(--color-slate);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    color: var(--color-coral-light);
  }
  
  .prose pre {
    background: var(--color-slate);
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose pre code {
    background: transparent;
    padding: 0;
  }
  
  .prose img {
    border-radius: 0.75rem;
    margin: 2rem 0;
  }
  
  .prose hr {
    border-color: var(--color-graphite);
    margin: 2.5rem 0;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
