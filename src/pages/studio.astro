---

<Layout
  title="Book the Studio | Media Production Space in Eagle, Idaho"
  description="Rent Eagle, Idaho's premier media production studio. Professional lighting, multi-camera setups, podcast room, and all equipment included. From $100/hour."
  schema={studioSchema}
>
  <Header />
  
  <main>
    <!-- Cinematic Hero with Background Image -->
    <section class="relative h-[70vh] min-h-[500px] flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="/images/studio/podcast-setup-1.webp"
          alt="Aloha Media Studio podcast room"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-void)]/80 via-[var(--color-void)]/60 to-[var(--color-void)]"></div>
      </div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full border border-[var(--color-studio-blue)]/30 bg-[var(--color-void)]/50 backdrop-blur-sm">
          <span class="w-2 h-2 rounded-full bg-[var(--color-studio-blue)] animate-pulse"></span>
          <span class="text-[var(--color-studio-blue)] text-sm font-medium tracking-wider uppercase">Now Booking</span>
        </div>
        
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-[var(--color-cream)] mb-6 tracking-tight">
          The Studio
        </h1>
        
        <p class="text-xl md:text-2xl text-[var(--color-mist)] mb-10 max-w-2xl mx-auto">
          Eagle's only dedicated media production space. Your creative home base.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#booking"
            class="px-8 py-4 bg-[var(--color-studio-blue)] text-white font-semibold text-lg rounded-full hover:bg-[var(--color-studio-blue-light)] transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-studio-blue)]/30"
          >
            Book Your Session
          </a>
          <a 
            href="#tour"
            class="px-8 py-4 border-2 border-[var(--color-cream)]/30 text-[var(--color-cream)] font-semibold text-lg rounded-full hover:border-[var(--color-cream)] hover:bg-[var(--color-cream)]/5 transition-all duration-300"
          >
            Take a Tour
          </a>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
        <a href="#tour" class="flex flex-col items-center gap-2 text-[var(--color-mist)]/60 hover:text-[var(--color-cream)] transition-colors">
          <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </section>
    
    <!-- Horizontal Scroll Gallery -->
    <section id="tour" class="bg-[var(--color-void)] overflow-hidden">
      <!-- Header -->
      <div class="max-w-7xl mx-auto px-6 pt-16 pb-8">
        <div class="flex items-end justify-between">
          <div>
            <p class="text-[var(--color-studio-blue)] text-sm font-medium tracking-widest uppercase mb-3">
              Tour the Space
            </p>
            <h2 class="text-3xl md:text-4xl font-bold text-[var(--color-cream)]">
              Where creativity comes to life
            </h2>
          </div>
          <p class="hidden md:block text-[var(--color-mist)] text-sm">
            Explore the Studio • Click to Enlarge
          </p>
        </div>
      </div>

      <!-- Gallery Container -->
      <div id="gallery-wrapper" class="relative h-[280px] md:h-[450px]">
        <!-- Desktop Arrows (hidden on mobile) - z-30 to stay above hovered images -->
        <button id="gallery-prev" class="hidden md:flex absolute left-4 top-1/2 -translate-y-1/2 z-30 w-12 h-12 rounded-full bg-[var(--color-void)]/80 border border-[var(--color-graphite)] items-center justify-center text-[var(--color-cream)] hover:bg-[var(--color-charcoal)] hover:border-[var(--color-studio-blue)] transition-all cursor-pointer opacity-0 pointer-events-none" aria-label="Previous image">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <button id="gallery-next" class="hidden md:flex absolute right-4 top-1/2 -translate-y-1/2 z-30 w-12 h-12 rounded-full bg-[var(--color-void)]/80 border border-[var(--color-graphite)] items-center justify-center text-[var(--color-cream)] hover:bg-[var(--color-charcoal)] hover:border-[var(--color-studio-blue)] transition-all cursor-pointer" aria-label="Next image">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>

        <!-- Horizontal Scroll Track -->
        <div id="gallery-scroll" class="absolute inset-0 flex items-center gap-3 md:gap-5 px-4 md:px-6 overflow-x-auto cursor-grab active:cursor-grabbing snap-x snap-mandatory">
          {galleryImages.map((image, index) => (
            <div
              class="gallery-item flex-shrink-0 h-[220px] md:h-[380px] rounded-xl md:rounded-2xl overflow-hidden cursor-pointer snap-center transition-all duration-500 ease-out opacity-60 scale-95"
              data-index={index}
            >
              <img
                src={image.src}
                alt={image.alt}
                class="h-full w-auto max-w-[280px] md:max-w-[500px] object-cover transition-all duration-300"
                loading={index < 6 ? "eager" : "lazy"}
                decoding="async"
              />
            </div>
          ))}
          <div class="flex-shrink-0 w-8 md:w-12 snap-end"></div>
        </div>
      </div>

      <!-- Progress Bar + Mobile Navigation -->
      <div class="max-w-7xl mx-auto px-6 py-4 md:py-6">
        <div class="flex items-center gap-3 md:gap-4">
          <!-- Mobile Prev Button -->
          <button id="gallery-prev-mobile" class="md:hidden w-10 h-10 rounded-full bg-[var(--color-charcoal)] border border-[var(--color-graphite)] flex items-center justify-center text-[var(--color-cream)] hover:border-[var(--color-studio-blue)] transition-all cursor-pointer flex-shrink-0" aria-label="Previous image">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>

          <div class="flex-1 flex items-center gap-3 md:gap-4">
            <div class="flex-1 h-1 bg-[var(--color-graphite)] rounded-full overflow-hidden">
              <div id="gallery-progress" class="h-full bg-[var(--color-studio-blue)] rounded-full transition-all duration-100" style="width: 5%"></div>
            </div>
            <span id="gallery-counter" class="text-sm text-[var(--color-mist)] tabular-nums">1 / {galleryImages.length}</span>
          </div>

          <!-- Mobile Next Button -->
          <button id="gallery-next-mobile" class="md:hidden w-10 h-10 rounded-full bg-[var(--color-charcoal)] border border-[var(--color-graphite)] flex items-center justify-center text-[var(--color-cream)] hover:border-[var(--color-studio-blue)] transition-all cursor-pointer flex-shrink-0" aria-label="Next image">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </div>
    </section>

    <!-- Lightbox Modal -->
    <div id="lightbox" class="fixed inset-0 z-50 hidden bg-black/95 backdrop-blur-sm">
      <!-- Image container - z-0 so buttons are on top -->
      <div id="lightbox-backdrop" class="absolute inset-0 z-0 flex items-center justify-center p-8">
        <img id="lightbox-img" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg pointer-events-none">
      </div>
      <!-- Controls - z-10 to be above image -->
      <button id="lightbox-close" class="absolute top-4 right-4 z-20 w-12 h-12 rounded-full bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors cursor-pointer">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      <button id="lightbox-prev" class="absolute left-4 top-1/2 -translate-y-1/2 z-20 w-12 h-12 rounded-full bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors cursor-pointer">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>
      <button id="lightbox-next" class="absolute right-4 top-1/2 -translate-y-1/2 z-20 w-12 h-12 rounded-full bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition-colors cursor-pointer">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>
      <div id="lightbox-counter" class="absolute bottom-4 left-1/2 -translate-x-1/2 z-20 text-white/70 text-sm"></div>
    </div>

    <style>
      #gallery-scroll {
        scrollbar-width: none;
        -ms-overflow-style: none;
        overflow-x: auto;
        overflow-y: hidden;
        scroll-behavior: smooth;
      }
      #gallery-scroll::-webkit-scrollbar {
        display: none;
      }
      #gallery-progress {
        transition: width 0.15s ease-out;
      }
      /* Center image emphasis */
      .gallery-item.active {
        opacity: 1;
        transform: scale(1);
      }
      /* Desktop hover - pop out effect + dim siblings */
      @media (hover: hover) {
        #gallery-scroll:hover .gallery-item {
          opacity: 0.4;
          transform: scale(0.92);
        }
        #gallery-scroll:hover .gallery-item:hover {
          opacity: 1;
          transform: scale(1.08) translateY(-8px);
          box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
          z-index: 10;
        }
      }
    </style>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const scroll = document.getElementById('gallery-scroll');
        const progress = document.getElementById('gallery-progress');
        const counter = document.getElementById('gallery-counter');
        const items = document.querySelectorAll('.gallery-item');
        const totalItems = items.length;

        // Desktop arrows
        const prevBtn = document.getElementById('gallery-prev');
        const nextBtn = document.getElementById('gallery-next');

        // Mobile arrows
        const prevBtnMobile = document.getElementById('gallery-prev-mobile');
        const nextBtnMobile = document.getElementById('gallery-next-mobile');

        // Lightbox elements
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        const lightboxClose = document.getElementById('lightbox-close');
        const lightboxPrev = document.getElementById('lightbox-prev');
        const lightboxNext = document.getElementById('lightbox-next');
        const lightboxCounter = document.getElementById('lightbox-counter');
        let currentLightboxIndex = 0;

        if (!scroll) return;

        // Find the currently visible image based on scroll position
        function getCurrentImageIndex() {
          const scrollLeft = scroll.scrollLeft;
          const scrollCenter = scrollLeft + scroll.clientWidth / 2;

          // Find which image is most visible
          let closestIndex = 0;
          let closestDistance = Infinity;

          items.forEach((item, index) => {
            const itemLeft = item.offsetLeft - scroll.offsetLeft;
            const itemCenter = itemLeft + item.offsetWidth / 2;
            const distance = Math.abs(itemCenter - scrollCenter);

            if (distance < closestDistance) {
              closestDistance = distance;
              closestIndex = index;
            }
          });

          return closestIndex;
        }

        // Update which images have the active class (center emphasis)
        function updateActiveImages() {
          const scrollLeft = scroll.scrollLeft;
          const scrollCenter = scrollLeft + scroll.clientWidth / 2;

          items.forEach((item, index) => {
            const itemLeft = item.offsetLeft - scroll.offsetLeft;
            const itemCenter = itemLeft + item.offsetWidth / 2;
            const distance = Math.abs(itemCenter - scrollCenter);
            const threshold = scroll.clientWidth * 0.4; // Within 40% of center

            if (distance < threshold) {
              item.classList.add('active');
            } else {
              item.classList.remove('active');
            }
          });
        }

        // Update progress and counter based on current image
        function updateProgress() {
          const scrollLeft = scroll.scrollLeft;
          const maxScroll = scroll.scrollWidth - scroll.clientWidth;
          const currentIndex = getCurrentImageIndex();

          // Progress bar based on image index (not scroll position)
          const pct = totalItems > 1 ? (currentIndex / (totalItems - 1)) * 100 : 0;
          progress.style.width = Math.max(5, Math.min(100, pct)) + '%';

          counter.textContent = (currentIndex + 1) + ' / ' + totalItems;

          // Update desktop arrow visibility
          if (prevBtn) prevBtn.style.opacity = currentIndex > 0 ? '1' : '0';
          if (prevBtn) prevBtn.style.pointerEvents = currentIndex > 0 ? 'auto' : 'none';
          if (nextBtn) nextBtn.style.opacity = currentIndex < totalItems - 1 ? '1' : '0';
          if (nextBtn) nextBtn.style.pointerEvents = currentIndex < totalItems - 1 ? 'auto' : 'none';

          // Update mobile arrow visibility
          if (prevBtnMobile) prevBtnMobile.style.opacity = currentIndex > 0 ? '1' : '0.3';
          if (prevBtnMobile) prevBtnMobile.style.pointerEvents = currentIndex > 0 ? 'auto' : 'none';
          if (nextBtnMobile) nextBtnMobile.style.opacity = currentIndex < totalItems - 1 ? '1' : '0.3';
          if (nextBtnMobile) nextBtnMobile.style.pointerEvents = currentIndex < totalItems - 1 ? 'auto' : 'none';
        }

        // Scroll to specific image (center it in viewport)
        function scrollToImage(index) {
          const item = items[index];
          if (item) {
            const itemCenter = item.offsetLeft + item.offsetWidth / 2;
            const scrollCenter = scroll.clientWidth / 2;
            const targetScroll = itemCenter - scrollCenter;
            scroll.scrollTo({ left: Math.max(0, targetScroll), behavior: 'smooth' });
          }
        }

        // Arrow navigation - Desktop
        if (prevBtn) {
          prevBtn.addEventListener('click', () => {
            const currentIndex = getCurrentImageIndex();
            if (currentIndex > 0) {
              scrollToImage(currentIndex - 1);
            }
          });
        }

        if (nextBtn) {
          nextBtn.addEventListener('click', () => {
            const currentIndex = getCurrentImageIndex();
            if (currentIndex < totalItems - 1) {
              scrollToImage(currentIndex + 1);
            }
          });
        }

        // Arrow navigation - Mobile
        if (prevBtnMobile) {
          prevBtnMobile.addEventListener('click', () => {
            const currentIndex = getCurrentImageIndex();
            if (currentIndex > 0) {
              scrollToImage(currentIndex - 1);
            }
          });
        }

        if (nextBtnMobile) {
          nextBtnMobile.addEventListener('click', () => {
            const currentIndex = getCurrentImageIndex();
            if (currentIndex < totalItems - 1) {
              scrollToImage(currentIndex + 1);
            }
          });
        }

        // Listen for scroll events
        scroll.addEventListener('scroll', () => {
          updateProgress();
          updateActiveImages();
        }, { passive: true });

        // Smart scroll handling - allow touchpad horizontal, convert vertical to horizontal
        scroll.addEventListener('wheel', (e) => {
          const maxScroll = scroll.scrollWidth - scroll.clientWidth;
          if (maxScroll <= 0) return;

          // If scrolling is primarily horizontal (touchpad gesture), let it through
          if (Math.abs(e.deltaX) > Math.abs(e.deltaY)) {
            // Horizontal scroll - let browser handle it naturally
            return;
          }

          // Vertical scroll (mouse wheel or vertical touchpad) - convert to horizontal
          if (Math.abs(e.deltaY) > 5) {
            e.preventDefault();
            scroll.scrollLeft += e.deltaY;
          }
        }, { passive: false });

        // Drag to scroll
        let isDragging = false;
        let startX = 0;
        let scrollLeft = 0;

        scroll.addEventListener('mousedown', (e) => {
          isDragging = true;
          startX = e.pageX - scroll.offsetLeft;
          scrollLeft = scroll.scrollLeft;
          scroll.style.cursor = 'grabbing';
        });

        scroll.addEventListener('mouseleave', () => {
          if (isDragging) {
            isDragging = false;
            scroll.style.cursor = 'grab';
          }
        });

        scroll.addEventListener('mouseup', () => {
          isDragging = false;
          scroll.style.cursor = 'grab';
        });

        scroll.addEventListener('mousemove', (e) => {
          if (!isDragging) return;
          e.preventDefault();
          const x = e.pageX - scroll.offsetLeft;
          const walk = (startX - x) * 1.5;
          scroll.scrollLeft = scrollLeft + walk;
        });

        // Lightbox functionality
        function openLightbox(index) {
          currentLightboxIndex = index;
          const img = items[index].querySelector('img');
          lightboxImg.src = img.src;
          lightboxImg.alt = img.alt;
          lightboxCounter.textContent = (index + 1) + ' / ' + totalItems;
          lightbox.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
          lightbox.classList.add('hidden');
          document.body.style.overflow = '';
        }

        function nextImage() {
          currentLightboxIndex = (currentLightboxIndex + 1) % totalItems;
          openLightbox(currentLightboxIndex);
        }

        function prevImage() {
          currentLightboxIndex = (currentLightboxIndex - 1 + totalItems) % totalItems;
          openLightbox(currentLightboxIndex);
        }

        items.forEach((item, index) => {
          item.addEventListener('click', (e) => {
            if (!isDragging) openLightbox(index);
          });
        });

        // Lightbox controls with stopPropagation to fix button issues
        lightboxClose.addEventListener('click', (e) => {
          e.stopPropagation();
          closeLightbox();
        });

        lightboxNext.addEventListener('click', (e) => {
          e.stopPropagation();
          nextImage();
        });

        lightboxPrev.addEventListener('click', (e) => {
          e.stopPropagation();
          prevImage();
        });

        // Close lightbox when clicking the backdrop (not buttons)
        const lightboxBackdrop = document.getElementById('lightbox-backdrop');
        if (lightboxBackdrop) {
          lightboxBackdrop.addEventListener('click', closeLightbox);
        }
        lightbox.addEventListener('click', (e) => {
