---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const studioFeatures = [
  { icon: 'light', label: 'Lighting Equipment', desc: 'Professional Aputure lighting included' },
  { icon: 'video', label: 'Camera Equipment', desc: 'Available upon request & approval' },
  { icon: 'mic', label: 'Pro Audio', desc: 'Professional microphones & recording' },
  { icon: 'layout', label: 'Dual Spaces', desc: 'Podcast room + main production studio' },
  { icon: 'wifi', label: 'High-Speed WiFi', desc: 'Fast, reliable connection' },
  { icon: 'car', label: 'Free Parking', desc: 'Dedicated spots for clients' },
]

const pricingTiers = [
  {
    name: 'Hourly',
    price: '$100',
    unit: '/hour',
    description: 'Quick shoots, headshots, or podcast recordings',
    features: [
      'Full studio access',
      'Basic lighting setup',
      'WiFi & amenities',
      '1 hour minimum',
    ],
    popular: false,
  },
  {
    name: 'Half-Day',
    price: '$350',
    unit: '4 hours',
    description: 'Content batching, interviews, or multi-setup shoots',
    features: [
      'Everything in Hourly',
      'Priority booking',
      'Equipment consultation',
      'Setup assistance',
    ],
    popular: true,
  },
  {
    name: 'Full-Day',
    price: '$600',
    unit: '8 hours',
    description: 'Video productions, campaigns, or complex setups',
    features: [
      'Everything in Half-Day',
      'Exclusive studio access',
      'Flexible scheduling',
      'Post-production workspace',
    ],
    popular: false,
    contactOnly: true,
  },
]

const studioImages = [
  // Podcast room (two-person setup)
  { src: '/images/studio/podcast-setup-1.webp', alt: 'Two-person podcast recording room', featured: true },
  { src: '/images/studio/podcast-setup-2.webp', alt: 'Podcast studio with professional lighting' },
  { src: '/images/studio/podcast-setup-3.webp', alt: 'Multi-camera podcast setup' },
  // Solo recording setup
  { src: '/images/studio/solo-setup-1.webp', alt: 'Solo recording booth' },
  { src: '/images/studio/solo-setup-2.webp', alt: 'Solo podcast setup' },
  { src: '/images/studio/solo-setup-3.webp', alt: 'Professional microphone and lighting' },
  { src: '/images/studio/solo-setup-4.webp', alt: 'Solo recording equipment' },
  { src: '/images/studio/solo-setup-5.webp', alt: 'Recording studio detail' },
  { src: '/images/studio/solo-setup-7.webp', alt: 'Studio equipment setup' },
  // Studio lounge/waiting area
  { src: '/images/studio/studio-space-1.webp', alt: 'Studio lounge area' },
  { src: '/images/studio/studio-space-2.webp', alt: 'Client waiting area' },
  { src: '/images/studio/studio-space-3.webp', alt: 'Studio common space' },
  // Microphone detail
  { src: '/images/studio/microphone.webp', alt: 'Professional studio microphone' },
]

// Page-specific schema for studio rental
const studioSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Aloha Media Studio Rental",
  "description": "Professional media production studio available for rent in Eagle, Idaho. Includes lighting, audio equipment, and multiple production spaces.",
  "image": "https://alohamediastudio.com/images/studio/studio-interior-1.jpg",
  "brand": { "@id": "https://alohamediastudio.com/#organization" },
  "offers": pricingTiers.map(tier => ({
    "@type": "Offer",
    "name": tier.name,
    "price": tier.price.replace('$', ''),
    "priceCurrency": "USD",
    "description": tier.description
  }))
}
---

<Layout
  title="Book the Studio | Media Production Space in Eagle, Idaho"
  description="Rent Eagle, Idaho's premier media production studio. Professional lighting, multi-camera setups, podcast room, and all equipment included. From $100/hour."
  schema={studioSchema}
>
  <Header />
  
  <main>
    <!-- Cinematic Hero with Background Image -->
    <section class="relative h-[70vh] min-h-[500px] flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="/images/studio/podcast-setup-1.webp"
          alt="Aloha Media Studio podcast room"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-void)]/80 via-[var(--color-void)]/60 to-[var(--color-void)]"></div>
      </div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full border border-[var(--color-coral)]/30 bg-[var(--color-void)]/50 backdrop-blur-sm">
          <span class="w-2 h-2 rounded-full bg-[var(--color-coral)] animate-pulse"></span>
          <span class="text-[var(--color-coral)] text-sm font-medium tracking-wider uppercase">Now Booking</span>
        </div>
        
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-[var(--color-cream)] mb-6 tracking-tight">
          The Studio
        </h1>
        
        <p class="text-xl md:text-2xl text-[var(--color-mist)] mb-10 max-w-2xl mx-auto">
          Eagle's only dedicated media production space. Your creative home base.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#booking"
            class="px-8 py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold text-lg rounded-full hover:bg-[var(--color-coral-light)] transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-coral)]/30"
          >
            Book Your Session
          </a>
          <a 
            href="#tour"
            class="px-8 py-4 border-2 border-[var(--color-cream)]/30 text-[var(--color-cream)] font-semibold text-lg rounded-full hover:border-[var(--color-cream)] hover:bg-[var(--color-cream)]/5 transition-all duration-300"
          >
            Take a Tour
          </a>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
        <a href="#tour" class="flex flex-col items-center gap-2 text-[var(--color-mist)]/60 hover:text-[var(--color-cream)] transition-colors">
          <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </section>
    
    <!-- Immersive Gallery -->
    <section id="tour" class="py-24 bg-[var(--color-void)]">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
            Tour the Space
          </p>
          <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)]">
            Where creativity comes to life
          </h2>
        </div>

        <!-- Masonry-style Gallery -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          {studioImages.map((image, index) => (
            <div
              class:list={[
                "rounded-2xl overflow-hidden group",
                image.featured ? "col-span-2 row-span-2" : "",
                index === 3 || index === 7 ? "md:col-span-2" : ""
              ]}
            >
              <img
                src={image.src}
                alt={image.alt}
                class:list={[
                  "w-full h-full object-cover transition-transform duration-700 group-hover:scale-105",
                  image.featured ? "aspect-square" : "aspect-[4/3]"
                ]}
                loading={index < 4 ? "eager" : "lazy"}
                decoding="async"
              />
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Features - Clean Grid -->
    <section class="py-24 bg-[var(--color-charcoal)]">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-16">
          <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
            What's Included
          </p>
          <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)]">
            Everything you need
          </h2>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
          {studioFeatures.map((feature) => (
            <div class="text-center group">
              <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-[var(--color-coral)]/10 flex items-center justify-center group-hover:bg-[var(--color-coral)]/20 group-hover:scale-110 transition-all duration-300">
                <svg class="w-7 h-7 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {feature.icon === 'light' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />}
                  {feature.icon === 'video' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />}
                  {feature.icon === 'mic' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />}
                  {feature.icon === 'layout' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />}
                  {feature.icon === 'wifi' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0" />}
                  {feature.icon === 'coffee' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />}
                  {feature.icon === 'car' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />}
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-[var(--color-cream)] mb-1">
                {feature.label}
              </h3>
              <p class="text-sm text-[var(--color-stone)]">
                {feature.desc}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Booking Section - Unified -->
    <section id="booking" class="py-24 bg-[var(--color-charcoal)]">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Header -->
        <div class="text-center mb-10">
          <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
            Ready?
          </p>
          <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)] mb-4">
            Book your session
          </h2>
          <p class="text-[var(--color-mist)] text-lg">
            Transparent rates. No hidden fees.
          </p>
        </div>

        <!-- Two-column layout (stacks on mobile) -->
        <div class="grid lg:grid-cols-[360px_1fr] gap-8 items-start">

          <!-- LEFT COLUMN: Session picker + info -->
          <div class="space-y-3">
            <!-- Session Cards -->
            <button id="tab-1hour" class="session-card active">
              <div class="flex items-center justify-between mb-1">
                <span class="price">$100</span>
                <span class="badge">1 Hour</span>
              </div>
              <p class="desc">Podcast recordings, headshots, quick shoots</p>
            </button>

            <button id="tab-4hour" class="session-card">
              <div class="flex items-center justify-between mb-1">
                <div class="flex items-center gap-2">
                  <span class="price">$350</span>
                  <span class="save">Save $50</span>
                </div>
                <span class="badge">4 Hours</span>
              </div>
              <p class="desc">Content batching, interviews, multi-setup shoots</p>
            </button>

            <button id="tab-fullday" class="session-card">
              <div class="flex items-center justify-between mb-1">
                <span class="price">$600</span>
                <span class="badge">Full Day</span>
              </div>
              <p class="desc">Video productions, campaigns, complex setups</p>
            </button>

            <!-- Info highlights -->
            <div class="pt-4 space-y-2">
              <p class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Professional lighting & audio included
              </p>
              <p class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Free cancellation 48hrs+
              </p>
              <p class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Instant confirmation
              </p>
            </div>

            <!-- Equipment note -->
            <p class="text-sm text-[var(--color-stone)] pt-2">
              Need equipment rental or camera operator? <a href="/#contact" class="text-[var(--color-coral)] hover:underline">Contact us</a> to discuss.
            </p>

            <!-- Terms -->
            <p class="text-xs text-[var(--color-stone)] pt-2">
              By booking, you agree to our <a href="/studio-agreement" class="text-[var(--color-coral)] hover:underline">Studio Rental Agreement</a>
            </p>
          </div>

          <!-- RIGHT COLUMN: Calendar or Contact Form -->
          <div class="rounded-3xl border border-[var(--color-graphite)] overflow-hidden bg-[var(--color-void)]">
            <!-- 1-Hour Calendar -->
            <div id="cal-wrapper-1hour">
              <div id="my-cal-inline-1hour" style="width:100%;"></div>
            </div>

            <!-- 4-Hour Calendar -->
            <div id="cal-wrapper-4hour" style="display:none;">
              <div id="my-cal-inline-4hour" style="width:100%;"></div>
            </div>

            <!-- Full Day Contact Form -->
            <div id="contact-wrapper-fullday" class="p-8" style="display:none;">
              <h3 class="text-2xl font-bold text-[var(--color-cream)] mb-2">Full Day Booking</h3>
              <p class="text-[var(--color-mist)] mb-6">Tell us about your project and we'll get back to you within 24 hours.</p>

              <form action="https://formsubmit.co/alohamediastudios@gmail.com" method="POST" class="space-y-4">
                <!-- Spam protection -->
                <input type="text" name="_honey" style="display:none">
                <input type="hidden" name="_captcha" value="true">
                <input type="hidden" name="_subject" value="Full Day Studio Booking Request">
                <input type="hidden" name="_next" value="https://alohamediastudio.com/booking-confirmed">

                <div class="grid sm:grid-cols-2 gap-4">
                  <input
                    type="text"
                    name="name"
                    placeholder="Your name"
                    required
                    class="w-full px-4 py-3 rounded-xl bg-[var(--color-charcoal)] border border-[var(--color-graphite)] text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:outline-none transition-colors"
                  >
                  <input
                    type="email"
                    name="email"
                    placeholder="Email address"
                    required
                    class="w-full px-4 py-3 rounded-xl bg-[var(--color-charcoal)] border border-[var(--color-graphite)] text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:outline-none transition-colors"
                  >
                </div>
                <textarea
                  name="message"
                  rows="4"
                  placeholder="Tell us about your project - what are you creating, how many people, any special requirements?"
                  required
                  class="w-full px-4 py-3 rounded-xl bg-[var(--color-charcoal)] border border-[var(--color-graphite)] text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:outline-none transition-colors resize-none"
                ></textarea>
                <button
                  type="submit"
                  class="w-full py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold rounded-full hover:scale-[1.02] hover:shadow-lg hover:shadow-[var(--color-coral)]/30 transition-all duration-300"
                >
                  Request Full Day Booking
                </button>
              </form>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- Session Card Styles -->
    <style>
      .session-card {
        width: 100%;
        padding: 1rem 1.25rem;
        border-radius: 1rem;
        text-align: left;
        transition: all 0.2s ease;
        background: transparent;
        border: 2px solid var(--color-ash);
        cursor: pointer;
      }

      .session-card:hover {
        border-color: var(--color-coral);
      }

      .session-card.active {
        background: var(--color-coral);
        border-color: var(--color-coral);
      }

      .session-card .price {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-cream);
      }

      .session-card.active .price {
        color: var(--color-void);
      }

      .session-card .save {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-coral);
        background: rgba(224, 123, 91, 0.1);
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
      }

      .session-card.active .save {
        color: var(--color-void);
        background: rgba(18, 18, 18, 0.2);
      }

      .session-card .badge {
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        background: var(--color-graphite);
        color: var(--color-cream);
      }

      .session-card.active .badge {
        background: var(--color-void);
        color: var(--color-coral);
      }

      .session-card .desc {
        font-size: 0.875rem;
        color: var(--color-mist);
      }

      .session-card.active .desc {
        color: var(--color-void);
        opacity: 0.85;
      }
    </style>

    <!-- Cal.com Embed Scripts -->
    <script type="text/javascript">
      (function (C, A, L) { let p = function (a, ar) { a.q.push(ar); }; let d = C.document; C.Cal = C.Cal || function () { let cal = C.Cal; let ar = arguments; if (!cal.loaded) { cal.ns = {}; cal.q = cal.q || []; d.head.appendChild(d.createElement("script")).src = A; cal.loaded = true; } if (ar[0] === L) { const api = function () { p(api, arguments); }; const namespace = ar[1]; api.q = api.q || []; if(typeof namespace === "string"){cal.ns[namespace] = cal.ns[namespace] || api;p(cal.ns[namespace], ar);p(cal, ["initNamespace", namespace]);} else p(cal, ar); return;} p(cal, ar); }; })(window, "https://app.cal.com/embed/embed.js", "init");

      // 1-Hour Calendar
      Cal("init", "1hour", {origin:"https://app.cal.com"});
      Cal.ns["1hour"]("inline", {
        elementOrSelector:"#my-cal-inline-1hour",
        config: {"layout":"month_view","useSlotsViewOnSmallScreen":"true"},
        calLink: "nation-goetter-peowyk/1hour",
      });
      Cal.ns["1hour"]("ui", {
        "cssVarsPerTheme": {
          "light": {"cal-brand": "#e07b5b"},
          "dark": {"cal-brand": "#e07b5b"}
        },
        "hideEventTypeDetails": false,
        "layout": "month_view"
      });

      // 4-Hour Calendar
      Cal("init", "4hour", {origin:"https://app.cal.com"});
      Cal.ns["4hour"]("inline", {
        elementOrSelector:"#my-cal-inline-4hour",
        config: {"layout":"month_view","useSlotsViewOnSmallScreen":"true"},
        calLink: "nation-goetter-peowyk/4hour",
      });
      Cal.ns["4hour"]("ui", {
        "cssVarsPerTheme": {
          "light": {"cal-brand": "#e07b5b"},
          "dark": {"cal-brand": "#e07b5b"}
        },
        "hideEventTypeDetails": false,
        "layout": "month_view"
      });

      // Tab switching
      document.addEventListener('DOMContentLoaded', function() {
        const tabs = ['1hour', '4hour', 'fullday'];

        tabs.forEach(tabId => {
          const btn = document.getElementById('tab-' + tabId);
          if (!btn) return;

          btn.addEventListener('click', function() {
            // Update card active states
            tabs.forEach(t => {
              const tabBtn = document.getElementById('tab-' + t);
              if (tabBtn) {
                tabBtn.classList.toggle('active', t === tabId);
              }
            });

            // Show/hide content wrappers
            document.getElementById('cal-wrapper-1hour').style.display = tabId === '1hour' ? 'block' : 'none';
            document.getElementById('cal-wrapper-4hour').style.display = tabId === '4hour' ? 'block' : 'none';
            document.getElementById('contact-wrapper-fullday').style.display = tabId === 'fullday' ? 'block' : 'none';
          });
        });
      });
    </script>

  </main>
  
  <Footer />
</Layout>
