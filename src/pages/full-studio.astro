---
// The Full Studio - All creative services
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const services = [
  {
    id: 'video',
    number: '01',
    title: 'Video',
    tagline: 'Make them watch',
    description: 'YouTube content, commercials, event recaps, documentaries. If it moves, we shoot it.',
    offerings: ['YouTube Content', 'Commercials & Ads', 'Event Recaps', 'Documentary & Story Films'],
    accent: '#3b82f6'
  },
  {
    id: 'photo',
    number: '02',
    title: 'Photo',
    tagline: 'Look the part',
    description: 'Headshots, products, events, brand shoots. Photos that actually look like you, just better.',
    offerings: ['Professional Headshots', 'Product Photography', 'Event Coverage', 'Brand Imagery'],
    accent: '#f97316'
  },
  {
    id: 'branding',
    number: '03',
    title: 'Branding',
    tagline: 'Own your look',
    description: 'Logos, colors, fonts, websites. The stuff that makes people recognize you instantly.',
    offerings: ['Logo Design', 'Brand Identity Systems', 'Website Design', 'Marketing Materials'],
    accent: '#eab308'
  },
  {
    id: 'audio',
    number: '04',
    title: 'Audio',
    tagline: 'Sound like a pro',
    description: 'Podcast production is our thing. We also do voiceovers, mixing, and sound design.',
    offerings: ['Podcast Production', 'Voiceover Recording', 'Audio Mixing', 'Sound Design'],
    accent: '#10b981',
    featured: true,
    featuredLink: '/'
  }
]

// Page-specific schema for services
const servicesSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Aloha Media Studio Services",
  "description": "Full creative services including video, photography, branding, and audio production",
  "itemListElement": services.map((service, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Service",
      "name": service.title,
      "description": service.description,
      "provider": { "@id": "https://alohamediastudio.com/#organization" }
    }
  }))
}
---

<Layout
  title="Video, Photo & Branding Services | Aloha Media Studio"
  description="Video production, photography, branding, and audio services in Eagle, Idaho. One team handles everythingâ€”no handoffs. Book your project today."
  schema={servicesSchema}
>
  <Header />

  <main>
    <!-- ==========================================
         HERO - Compact, impactful
         ========================================== -->
    <section class="h-[100svh] flex items-center justify-center bg-[var(--color-void)] relative overflow-hidden">
      <!-- Animated gradient orbs -->
      <div class="absolute top-1/4 -left-20 w-40 md:w-96 h-40 md:h-96 bg-[var(--color-coral)]/20 rounded-full blur-[80px] md:blur-[100px] animate-float"></div>
      <div class="absolute bottom-1/4 -right-20 w-40 md:w-96 h-40 md:h-96 bg-[var(--color-retro-blue)]/20 rounded-full blur-[80px] md:blur-[100px] animate-float-delayed"></div>

      <!-- Floating service words background - hidden on mobile -->
      <div class="absolute inset-0 overflow-hidden opacity-[0.03] pointer-events-none select-none hidden md:block">
        <div class="floating-words">
          <span style="top: 10%; left: 5%; animation-delay: 0s;">VIDEO</span>
          <span style="top: 25%; right: 10%; animation-delay: 1s;">PHOTO</span>
          <span style="top: 60%; left: 15%; animation-delay: 2s;">BRAND</span>
          <span style="top: 75%; right: 5%; animation-delay: 0.5s;">AUDIO</span>
          <span style="top: 40%; left: 60%; animation-delay: 1.5s;">CREATE</span>
          <span style="top: 85%; left: 40%; animation-delay: 2.5s;">STORY</span>
        </div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-5 text-center">
        <h1 class="text-[2rem] leading-[1.1] sm:text-5xl md:text-6xl lg:text-[5.5rem] font-bold text-[var(--color-cream)] mb-4 md:mb-8 md:leading-[0.95] tracking-tight" data-animate="fade-up">
          Your brand.<br/>
          <span class="hero-highlight">Every format.</span>
        </h1>

        <p class="text-sm md:text-xl text-[var(--color-mist)] max-w-md mx-auto mb-6 md:mb-10" data-animate="fade-up">
          Video, photo, branding, audio. One team. No handoffs.
        </p>

        <!-- Service pills - desktop only -->
        <div class="hidden md:flex flex-wrap justify-center gap-3 mb-10" data-animate="fade-up">
          <a href="#video" class="service-pill" style="--pill-color: #3b82f6;">
            <span class="pill-dot"></span>
            Video
          </a>
          <a href="#photo" class="service-pill" style="--pill-color: #f97316;">
            <span class="pill-dot"></span>
            Photo
          </a>
          <a href="#branding" class="service-pill" style="--pill-color: #eab308;">
            <span class="pill-dot"></span>
            Branding
          </a>
          <a href="#audio" class="service-pill" style="--pill-color: #10b981;">
            <span class="pill-dot"></span>
            Audio
          </a>
        </div>

        <a
          href="/#contact"
          class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold text-sm md:text-lg rounded-full transition-all duration-300 hover:bg-[var(--color-coral-light)] hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-coral)]/30"
          data-animate="fade-up"
          data-magnetic
        >
          Let's Talk
          <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>

      <!-- Scroll indicator - hidden on mobile -->
      <a href="#video" class="absolute bottom-6 left-1/2 -translate-x-1/2 text-[var(--color-mist)]/50 hover:text-[var(--color-cream)] transition-colors hidden md:block">
        <svg class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </section>

    <!-- ==========================================
         SERVICES - Unique visual for each
         ========================================== -->
    {services.map((service, index) => (
      <section
        id={service.id}
        class={`service-section min-h-[100svh] md:min-h-0 py-8 md:py-24 lg:py-32 relative overflow-hidden flex items-center ${index % 2 === 0 ? 'bg-[var(--color-charcoal)]' : 'bg-[var(--color-void)]'}`}
      >
        <!-- Large background number -->
        <div
          class="absolute top-1/2 -translate-y-1/2 font-bold text-[8rem] md:text-[20rem] lg:text-[30rem] leading-none opacity-[0.03] pointer-events-none select-none"
          style={`color: ${service.accent}; ${index % 2 === 0 ? 'right: -5%;' : 'left: -5%;'}`}
        >
          {service.number}
        </div>

        <div class="max-w-6xl mx-auto px-5 md:px-6 relative z-10 w-full">
          <div class="grid lg:grid-cols-12 gap-4 lg:gap-8 items-center">
            <!-- Content Side -->
            <div class={`lg:col-span-5 ${index % 2 === 1 ? 'lg:order-2 lg:col-start-8' : ''}`} data-animate="fade-up">

              <!-- Mobile: Number + Icon row -->
              <div class="flex items-center gap-3 mb-3 md:mb-6">
                <!-- Number badge -->
                <div
                  class="inline-flex items-center gap-1.5 md:gap-2 px-2.5 md:px-3 py-1 md:py-1.5 rounded-full"
                  style={`background-color: ${service.accent}15; border: 1px solid ${service.accent}30;`}
                >
                  <span class="text-[10px] md:text-sm font-bold" style={`color: ${service.accent}`}>{service.number}</span>
                  <span class="text-[10px] md:text-sm font-medium text-[var(--color-cream)]">{service.title}</span>
                </div>

                <!-- Mobile mini icon - visible only on small screens -->
                <div class="lg:hidden ml-auto">
                  {service.id === 'video' && (
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center" style={`background-color: ${service.accent}15; border: 1px solid ${service.accent}30;`}>
                      <svg class="w-5 h-5" fill="currentColor" style={`color: ${service.accent}`} viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                  )}
                  {service.id === 'photo' && (
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center" style={`background-color: ${service.accent}15; border: 1px solid ${service.accent}30;`}>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" style={`color: ${service.accent}`} viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                  )}
                  {service.id === 'branding' && (
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center" style={`background-color: ${service.accent}15; border: 1px solid ${service.accent}30;`}>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" style={`color: ${service.accent}`} viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                      </svg>
                    </div>
                  )}
                  {service.id === 'audio' && (
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center" style={`background-color: ${service.accent}15; border: 1px solid ${service.accent}30;`}>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" style={`color: ${service.accent}`} viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
                      </svg>
                    </div>
                  )}
                </div>
              </div>

              <!-- Tagline as big text -->
              <h2
                class="text-xl md:text-3xl lg:text-5xl font-bold mb-2 md:mb-6 leading-tight"
                style={`color: ${service.accent}`}
              >
                {service.tagline}
              </h2>

              <!-- Description -->
              <p class="text-xs md:text-base lg:text-lg text-[var(--color-mist)] mb-3 md:mb-6 leading-relaxed">
                {service.description}
              </p>

              <!-- Offerings as inline tags -->
              <div class="flex flex-wrap gap-1 md:gap-2 mb-3 md:mb-6">
                {service.offerings.map((offering) => (
                  <span
                    class="px-2 md:px-4 py-1 md:py-2 rounded-md md:rounded-lg text-[10px] md:text-sm font-medium"
                    style={`background-color: ${service.accent}10; color: ${service.accent}; border: 1px solid ${service.accent}20;`}
                  >
                    {offering}
                  </span>
                ))}
              </div>

              <!-- CTA for featured -->
              {service.featured && (
                <a
                  href={service.featuredLink}
                  class="inline-flex items-center gap-2 px-4 md:px-6 py-2 md:py-3 rounded-full text-xs md:text-base font-semibold transition-all duration-300 hover:scale-105 hover:shadow-lg"
                  style={`background-color: ${service.accent}; color: var(--color-void);`}
                >
                  See Our Podcast Package
                  <svg class="w-3.5 h-3.5 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              )}
            </div>

            <!-- Visual Side - Hidden on mobile, shown on desktop -->
            <div class={`hidden lg:block lg:col-span-6 ${index % 2 === 1 ? 'lg:order-1' : 'lg:col-start-7'}`} data-animate="fade-up">
              <div class="service-visual" style={`--accent: ${service.accent};`}>
                {service.id === 'video' && (
                  <a href="https://youtu.be/wg2JuFpV_74" target="_blank" rel="noopener" class="visual-with-image video-link">
                    <img
                      src="/images/projects/jay-clouse-thumb.jpg"
                      alt="Video production sample"
                      class="visual-bg-image"
                    />
                    <div class="play-button-overlay">
                      <div class="play-button-large">
                        <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M8 5v14l11-7z"/>
                        </svg>
                      </div>
                    </div>
                    <div class="specialty-badge">
                      <span>Our Specialty</span>
                    </div>
                  </a>
                )}

                {service.id === 'photo' && (
                  <div class="visual-with-image">
                    <img
                      src="/images/studio/studio-interior-1.jpg"
                      alt="Studio interior"
                      class="visual-bg-image"
                    />
                    <div class="viewfinder-overlay">
                      <div class="viewfinder">
                        <div class="vf-corner vf-tl"></div>
                        <div class="vf-corner vf-tr"></div>
                        <div class="vf-corner vf-bl"></div>
                        <div class="vf-corner vf-br"></div>
                        <div class="vf-center"></div>
                      </div>
                    </div>
                  </div>
                )}

                {service.id === 'branding' && (
                  <div class="visual-with-image">
                    <img
                      src="/images/projects/authorvoice-site.png"
                      alt="Website design sample"
                      class="visual-bg-image"
                    />
                    <div class="branding-bar">
                      <div class="color-bar">
                        <div class="color-chip" style="background: #eab308;"></div>
                        <div class="color-chip" style="background: #ca8a04;"></div>
                        <div class="color-chip" style="background: #fef08a;"></div>
                        <div class="color-chip" style="background: #422006;"></div>
                      </div>
                    </div>
                  </div>
                )}

                {service.id === 'audio' && (
                  <div class="visual-with-image">
                    <img
                      src="/images/studio/studio-interior-3.jpg"
                      alt="Podcast recording studio"
                      class="visual-bg-image"
                    />
                    <div class="audio-eq-overlay">
                      <div class="eq-bars">
                        {Array(12).fill(0).map((_, i) => (
                          <div class="eq-bar" style={`--bar-delay: ${i * 0.1}s; --bar-height: ${40 + Math.random() * 60}%;`}></div>
                        ))}
                      </div>
                    </div>
                    <div class="specialty-badge">
                      <span>Our Specialty</span>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      </section>
    ))}

    <!-- ==========================================
         WHY ONE STUDIO - Quick value props
         ========================================== -->
    <section class="py-10 md:py-24 lg:py-32 bg-[var(--color-charcoal)] relative overflow-hidden">
      <!-- Decorative lines - hidden on mobile -->
      <div class="absolute inset-0 opacity-[0.02] hidden md:block">
        <div class="absolute top-0 left-1/4 w-px h-full bg-[var(--color-cream)]"></div>
        <div class="absolute top-0 left-2/4 w-px h-full bg-[var(--color-cream)]"></div>
        <div class="absolute top-0 left-3/4 w-px h-full bg-[var(--color-cream)]"></div>
      </div>

      <div class="max-w-5xl mx-auto px-5 md:px-6 relative z-10">
        <div class="text-center mb-6 md:mb-16" data-animate="fade-up">
          <h2 class="text-xl md:text-3xl lg:text-5xl font-bold text-[var(--color-cream)] mb-2 md:mb-6">
            Why work with <span class="text-[var(--color-coral)]">one studio?</span>
          </h2>
          <p class="text-xs md:text-base lg:text-lg text-[var(--color-mist)] max-w-2xl mx-auto">
            When your video team talks to your photo team talks to your branding team, everything fits together.
          </p>
        </div>

        <div class="grid grid-cols-3 gap-2 md:gap-8 lg:gap-12" data-animate="fade-up">
          <div class="value-card">
            <div class="value-number">01</div>
            <h3 class="text-xs md:text-xl font-bold text-[var(--color-cream)] mb-1 md:mb-3">Consistent Brand</h3>
            <p class="text-[10px] md:text-base text-[var(--color-mist)] leading-snug">
              One vision across all your content.
            </p>
          </div>

          <div class="value-card">
            <div class="value-number">02</div>
            <h3 class="text-xs md:text-xl font-bold text-[var(--color-cream)] mb-1 md:mb-3">Faster Delivery</h3>
            <p class="text-[10px] md:text-base text-[var(--color-mist)] leading-snug">
              One team that knows your project.
            </p>
          </div>

          <div class="value-card">
            <div class="value-number">03</div>
            <h3 class="text-xs md:text-xl font-bold text-[var(--color-cream)] mb-1 md:mb-3">Real Partnership</h3>
            <p class="text-[10px] md:text-base text-[var(--color-mist)] leading-snug">
              We get to know your business.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- ==========================================
         CONTACT FORM
         ========================================== -->
    <section id="contact" class="py-16 md:py-24 lg:py-32 bg-[var(--color-void)] relative overflow-hidden">
      <!-- Gradient orb -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] md:w-[600px] h-[300px] md:h-[600px] bg-[var(--color-coral)]/10 rounded-full blur-[100px] md:blur-[150px]"></div>

      <div class="max-w-2xl mx-auto px-5 md:px-6 relative z-10">
        <div class="text-center mb-8 md:mb-12">
          <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold text-[var(--color-cream)] mb-3 md:mb-4" data-animate="fade-up">
            Ready to create<br/>
            <span class="text-[var(--color-coral)]">something great?</span>
          </h2>
          <p class="text-sm md:text-lg text-[var(--color-mist)]" data-animate="fade-up">
            Tell us what you're working on.
          </p>
        </div>

        <form
          action="https://formsubmit.co/media@alohapublishing.com"
          method="POST"
          class="bg-[var(--color-charcoal)] rounded-2xl p-6 md:p-8 border border-[var(--color-graphite)]"
          data-animate="fade-up"
        >
          <!-- FormSubmit config -->
          <input type="hidden" name="_subject" value="New inquiry from Full Studio page">
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_template" value="table">
          <input type="text" name="_honey" style="display:none">

          <div class="space-y-4 md:space-y-5">
            <!-- Name & Email row -->
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="fs-name" class="block text-xs md:text-sm font-medium text-[var(--color-cream)] mb-1.5 md:mb-2">
                  Name
                </label>
                <input
                  type="text"
                  id="fs-name"
                  name="name"
                  required
                  class="w-full px-3 md:px-4 py-2.5 md:py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-sm md:text-base text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="fs-email" class="block text-xs md:text-sm font-medium text-[var(--color-cream)] mb-1.5 md:mb-2">
                  Email
                </label>
                <input
                  type="email"
                  id="fs-email"
                  name="email"
                  required
                  class="w-full px-3 md:px-4 py-2.5 md:py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-sm md:text-base text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors"
                  placeholder="your@email.com"
                />
              </div>
            </div>

            <!-- Service type -->
            <div>
              <label for="fs-service" class="block text-xs md:text-sm font-medium text-[var(--color-cream)] mb-1.5 md:mb-2">
                What can we help with?
              </label>
              <select
                id="fs-service"
                name="service"
                class="w-full px-3 md:px-4 py-2.5 md:py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-sm md:text-base text-[var(--color-cream)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors"
              >
                <option value="">Select a service</option>
                <option value="video">Video Production</option>
                <option value="photo">Photography</option>
                <option value="branding">Branding & Web</option>
                <option value="audio">Audio & Podcasts</option>
                <option value="multiple">Multiple Services</option>
                <option value="other">Something else</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="fs-message" class="block text-xs md:text-sm font-medium text-[var(--color-cream)] mb-1.5 md:mb-2">
                Tell us about your project
              </label>
              <textarea
                id="fs-message"
                name="message"
                rows="4"
                required
                class="w-full px-3 md:px-4 py-2.5 md:py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-sm md:text-base text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors resize-none"
                placeholder="What are you working on?"
              ></textarea>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full px-6 py-3 md:py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold text-sm md:text-base rounded-lg hover:bg-[var(--color-coral-light)] transition-all duration-300 hover:shadow-xl hover:shadow-[var(--color-coral)]/30"
            >
              Send Message
            </button>
          </div>
        </form>

        <p class="mt-6 text-center text-xs md:text-sm text-[var(--color-stone)]">
          Looking specifically for podcasting?
          <a href="/" class="text-[var(--color-coral)] hover:text-[var(--color-coral-light)] ml-1 underline underline-offset-4">
            See our 6-Episode Package
          </a>
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Hero Animations */
  @keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
  }

  @keyframes float-delayed {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(20px) scale(1.05); }
  }

  .animate-float {
    animation: float 8s ease-in-out infinite;
  }

