---
// The Full Studio - Epic "Homepage v2" showcasing all creative services
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

// Services data structure
const services = {
  video: {
    title: 'Video Production',
    tagline: 'Video That Moves People',
    accent: 'blue',
    items: [
      {
        name: 'YouTube Content',
        description: 'Channel strategy, episodes, and shorts that grow your audience',
        icon: 'youtube',
        gradient: 'from-red-600 to-red-800'
      },
      {
        name: 'Commercials & Ads',
        description: 'Brand spots and social ads that convert',
        icon: 'tv',
        gradient: 'from-blue-600 to-purple-700'
      },
      {
        name: 'Event Recaps',
        description: 'Conferences, launches, and highlight reels',
        icon: 'calendar',
        gradient: 'from-amber-600 to-orange-700'
      },
      {
        name: 'Passion Projects',
        description: 'Mini-docs, personal stories, and creative films',
        icon: 'film',
        gradient: 'from-emerald-600 to-teal-700'
      },
    ]
  },
  photo: {
    title: 'Photography',
    tagline: 'Images That Tell Your Story',
    accent: 'coral',
    items: [
      {
        name: 'Professional Headshots',
        description: 'Stand out on LinkedIn and your website',
        icon: 'user',
        gradient: 'from-slate-600 to-slate-800'
      },
      {
        name: 'Product Photography',
        description: 'Make your products shine',
        icon: 'box',
        gradient: 'from-rose-600 to-pink-700'
      },
      {
        name: 'Event Coverage',
        description: 'Capture the moments that matter',
        icon: 'camera',
        gradient: 'from-violet-600 to-purple-700'
      },
      {
        name: 'Brand Imagery',
        description: 'Cohesive visuals for your brand',
        icon: 'image',
        gradient: 'from-cyan-600 to-blue-700'
      },
    ]
  },
  branding: {
    title: 'Branding & Web',
    tagline: 'Brands Built to Last',
    accent: 'gold',
    items: [
      {
        name: 'Logo Design',
        description: 'Memorable marks that represent you',
        icon: 'star',
        gradient: 'from-amber-500 to-yellow-600'
      },
      {
        name: 'Brand Identity',
        description: 'Colors, fonts, and guidelines that define your look',
        icon: 'palette',
        gradient: 'from-fuchsia-600 to-pink-700'
      },
      {
        name: 'Website Design',
        description: 'Sites that convert visitors to customers',
        icon: 'globe',
        gradient: 'from-indigo-600 to-blue-700'
      },
      {
        name: 'Marketing Materials',
        description: 'Business cards to billboards',
        icon: 'document',
        gradient: 'from-teal-600 to-emerald-700'
      },
    ]
  },
  audio: {
    title: 'Audio Production',
    tagline: 'Sound That Resonates',
    accent: 'emerald',
    items: [
      {
        name: 'Podcast Production',
        description: 'Our specialty â€” full-service podcast creation',
        icon: 'mic',
        gradient: 'from-[var(--color-coral)] to-[var(--color-sunset)]',
        link: '/'
      },
      {
        name: 'Voiceover Recording',
        description: 'Professional VO for any project',
        icon: 'waveform',
        gradient: 'from-sky-600 to-blue-700'
      },
      {
        name: 'Audio Mixing',
        description: 'Clean, polished sound',
        icon: 'sliders',
        gradient: 'from-lime-600 to-green-700'
      },
      {
        name: 'Sound Design',
        description: 'Music and effects that enhance your content',
        icon: 'music',
        gradient: 'from-orange-600 to-red-700'
      },
    ]
  }
}
---

<Layout
  title="The Full Studio | Aloha Media Studio"
  description="Video production, photography, branding, web design, and audio services. Your full creative partner in Eagle, Idaho."
>
  <Header />

  <main class="pt-20">
    <!-- ==========================================
         HERO SECTION
         ========================================== -->
    <section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden bg-[var(--color-void)]">
      <!-- Animated gradient background -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-coral)]/20 via-transparent to-[var(--color-retro-blue)]/20"></div>
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--color-coral)_0%,_transparent_50%)] opacity-20"></div>
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_var(--color-gold)_0%,_transparent_50%)] opacity-15"></div>
      </div>

      <!-- Content -->
      <div class="relative z-10 max-w-5xl mx-auto px-6 text-center py-20">
        <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-6" data-animate="fade-up">
          Beyond Podcasting
        </p>

        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-[1.05] tracking-tight" data-animate="fade-up">
          <span class="text-gradient">Your Full Creative Studio</span>
        </h1>

        <p class="text-xl md:text-2xl text-[var(--color-mist)] max-w-2xl mx-auto mb-12" data-animate="fade-up">
          Video. Photo. Branding. Audio.<br class="hidden md:block" />
          <span class="text-[var(--color-cream)]">One team, endless possibilities.</span>
        </p>

        <a
          href="#video"
          class="inline-flex items-center gap-3 px-8 py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold text-lg rounded-full transition-all duration-300 hover:bg-[var(--color-coral-light)] hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-coral)]/30"
          data-animate="fade-up"
          data-magnetic
        >
          See What We Create
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:block">
        <a href="#video" class="flex flex-col items-center gap-2 text-[var(--color-mist)]/60 hover:text-[var(--color-cream)] transition-colors">
          <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </section>

    <!-- ==========================================
         VIDEO PRODUCTION SECTION
         ========================================== -->
    <section id="video" class="py-24 md:py-32 bg-[var(--color-charcoal)]">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-16" data-animate="fade-up">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--color-retro-blue)]/10 border border-[var(--color-retro-blue)]/20 mb-6">
            <svg class="w-5 h-5 text-[var(--color-retro-blue)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            <span class="text-sm font-medium text-[var(--color-retro-blue)]">Video Production</span>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)] mb-4">
            {services.video.tagline}
          </h2>
          <p class="text-lg text-[var(--color-mist)] max-w-xl mx-auto">
            From YouTube series to commercial campaigns, we craft video content that captures attention and drives results.
          </p>
        </div>

        <!-- Service Cards Grid -->
        <div class="grid md:grid-cols-2 gap-6" data-animate-stagger>
          {services.video.items.map((item) => (
            <div
              class="group relative overflow-hidden rounded-2xl bg-[var(--color-slate)] border border-[var(--color-graphite)] transition-all duration-500 hover:border-[var(--color-retro-blue)]/50 hover:shadow-xl hover:shadow-[var(--color-retro-blue)]/10"
              data-animate-child
            >
              <!-- Thumbnail Placeholder -->
              <div class={`relative h-48 md:h-56 bg-gradient-to-br ${item.gradient} overflow-hidden`}>
                <div class="absolute inset-0 flex items-center justify-center">
                  {item.icon === 'youtube' && (
                    <div class="w-20 h-20 rounded-2xl bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                      </svg>
                    </div>
                  )}
                  {item.icon === 'tv' && (
                    <div class="w-20 h-20 rounded-2xl bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                  )}
                  {item.icon === 'calendar' && (
                    <div class="w-20 h-20 rounded-2xl bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  )}
                  {item.icon === 'film' && (
                    <div class="w-20 h-20 rounded-2xl bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                      </svg>
                    </div>
                  )}
                </div>
                <!-- Hover overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-slate)] via-transparent to-transparent opacity-60"></div>
              </div>

              <!-- Content -->
              <div class="p-6">
                <h3 class="text-xl font-bold text-[var(--color-cream)] mb-2 group-hover:text-[var(--color-retro-blue)] transition-colors">
                  {item.name}
                </h3>
                <p class="text-[var(--color-mist)] text-sm leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ==========================================
         PHOTOGRAPHY SECTION
         ========================================== -->
    <section id="photo" class="py-24 md:py-32 bg-[var(--color-void)]">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-16" data-animate="fade-up">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--color-coral)]/10 border border-[var(--color-coral)]/20 mb-6">
            <svg class="w-5 h-5 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-sm font-medium text-[var(--color-coral)]">Photography</span>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)] mb-4">
            {services.photo.tagline}
          </h2>
          <p class="text-lg text-[var(--color-mist)] max-w-xl mx-auto">
            Professional photography that captures your brand's essence and tells your story visually.
          </p>
        </div>

        <!-- Service Cards Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6" data-animate-stagger>
          {services.photo.items.map((item) => (
            <div
              class="group relative overflow-hidden rounded-2xl bg-[var(--color-charcoal)] border border-[var(--color-graphite)] transition-all duration-500 hover:border-[var(--color-coral)]/50 hover:shadow-xl hover:shadow-[var(--color-coral)]/10"
              data-animate-child
            >
              <!-- Thumbnail Placeholder - Square for photos -->
              <div class={`relative aspect-square bg-gradient-to-br ${item.gradient} overflow-hidden`}>
                <div class="absolute inset-0 flex items-center justify-center">
                  {item.icon === 'user' && (
                    <div class="w-16 h-16 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                  )}
                  {item.icon === 'box' && (
                    <div class="w-16 h-16 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                      </svg>
                    </div>
                  )}
                  {item.icon === 'camera' && (
                    <div class="w-16 h-16 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                  )}
                  {item.icon === 'image' && (
                    <div class="w-16 h-16 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  )}
                </div>
                <!-- Hover overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-charcoal)] via-transparent to-transparent opacity-60"></div>
              </div>

              <!-- Content -->
              <div class="p-5">
                <h3 class="text-lg font-bold text-[var(--color-cream)] mb-1 group-hover:text-[var(--color-coral)] transition-colors">
                  {item.name}
                </h3>
                <p class="text-[var(--color-stone)] text-sm leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ==========================================
         BRANDING & WEB SECTION
         ========================================== -->
    <section id="branding" class="py-24 md:py-32 bg-[var(--color-charcoal)]">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-16" data-animate="fade-up">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--color-gold)]/10 border border-[var(--color-gold)]/20 mb-6">
            <svg class="w-5 h-5 text-[var(--color-gold)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span class="text-sm font-medium text-[var(--color-gold)]">Branding & Web</span>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)] mb-4">
            {services.branding.tagline}
          </h2>
          <p class="text-lg text-[var(--color-mist)] max-w-xl mx-auto">
            Complete brand identity and web presence that makes you memorable and drives business.
          </p>
        </div>

        <!-- Service Cards - Horizontal layout -->
        <div class="grid md:grid-cols-2 gap-6" data-animate-stagger>
          {services.branding.items.map((item) => (
            <div
              class="group flex gap-5 p-6 rounded-2xl bg-[var(--color-slate)] border border-[var(--color-graphite)] transition-all duration-500 hover:border-[var(--color-gold)]/50 hover:shadow-xl hover:shadow-[var(--color-gold)]/10"
              data-animate-child
            >
              <!-- Icon -->
              <div class={`flex-shrink-0 w-16 h-16 rounded-xl bg-gradient-to-br ${item.gradient} flex items-center justify-center group-hover:scale-110 transition-transform duration-500`}>
                {item.icon === 'star' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                )}
                {item.icon === 'palette' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                  </svg>
                )}
                {item.icon === 'globe' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                )}
                {item.icon === 'document' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                )}
              </div>

              <!-- Content -->
              <div class="flex-1">
                <h3 class="text-xl font-bold text-[var(--color-cream)] mb-2 group-hover:text-[var(--color-gold)] transition-colors">
                  {item.name}
                </h3>
                <p class="text-[var(--color-mist)] text-sm leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ==========================================
         AUDIO PRODUCTION SECTION
         ========================================== -->
    <section id="audio" class="py-24 md:py-32 bg-[var(--color-void)] relative overflow-hidden">
      <!-- Waveform background decoration -->
      <div class="absolute inset-0 opacity-5 pointer-events-none">
        <svg class="w-full h-full" viewBox="0 0 1200 400" preserveAspectRatio="none">
          <path d="M0,200 Q150,100 300,200 T600,200 T900,200 T1200,200" stroke="currentColor" stroke-width="2" fill="none" class="text-emerald-500" />
          <path d="M0,200 Q150,300 300,200 T600,200 T900,200 T1200,200" stroke="currentColor" stroke-width="2" fill="none" class="text-emerald-500" />
        </svg>
      </div>

      <div class="max-w-6xl mx-auto px-6 relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-16" data-animate="fade-up">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-emerald-500/10 border border-emerald-500/20 mb-6">
            <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
            </svg>
