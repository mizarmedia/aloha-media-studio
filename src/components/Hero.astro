---
// Hero section - premium with optional video background
interface Props {
  videoUrl?: string // Optional YouTube embed or video file
  showVideo?: boolean
}

const { videoUrl, showVideo = false } = Astro.props
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Video Background (optional) -->
  {showVideo && videoUrl && (
    <div class="absolute inset-0 z-0">
      <video 
        autoplay 
        muted 
        loop 
        playsinline
        class="video-background"
      >
        <source src={videoUrl} type="video/mp4" />
      </video>
      <div class="video-overlay"></div>
    </div>
  )}
  
  <!-- Gradient Background (when no video) -->
  {!showVideo && (
    <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-void)] via-[var(--color-charcoal)] to-[var(--color-slate)]"></div>
  )}
  
  <!-- Animated grain texture -->
  <div class="absolute inset-0 opacity-[0.15] mix-blend-overlay pointer-events-none noise-bg"></div>
  
  <!-- Floating orbs with parallax -->
  <div 
    class="absolute top-1/4 -left-32 w-[500px] h-[500px] bg-[var(--color-coral)] rounded-full blur-[120px] opacity-[0.15] animate-pulse-glow"
    data-parallax="0.3"
  ></div>
  <div 
    class="absolute bottom-1/4 -right-32 w-[400px] h-[400px] bg-[var(--color-sunset)] rounded-full blur-[100px] opacity-[0.12] animate-pulse-glow"
    data-parallax="0.2"
    style="animation-delay: 2s;"
  ></div>
  <div 
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[var(--color-gold)] rounded-full blur-[150px] opacity-[0.05]"
    data-parallax="0.1"
  ></div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-5xl mx-auto px-6 text-center">
    <!-- Location badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 mb-8 rounded-full border border-[var(--color-ash)] bg-[var(--color-void)]/50 backdrop-blur-sm" data-animate="fade-up">
      <span class="w-2 h-2 rounded-full bg-[var(--color-coral)] animate-pulse"></span>
      <span class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase">
        Eagle, Idaho
      </span>
    </div>
    
    <!-- Main headline -->
    <h1 class="text-5xl md:text-7xl lg:text-[6rem] xl:text-[7rem] font-bold mb-8 leading-[0.95]" data-animate="fade-up">
      <span class="block text-[var(--color-cream)]">Your story.</span>
      <span class="block mt-2 text-gradient animate-gradient bg-[length:200%_200%]">Our craft.</span>
    </h1>
    
    <!-- Subheadline -->
    <p class="text-lg md:text-xl lg:text-2xl text-[var(--color-mist)] max-w-2xl mx-auto mb-12 leading-relaxed" data-animate="fade-up">
      Professional video production, photography, podcasting, and branding. 
      <span class="text-[var(--color-cream)]">Eagle's only dedicated media studio.</span>
    </p>
    
    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center" data-animate="fade-up">
      <a 
        href="#contact"
        data-magnetic
        class="group relative px-8 py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold rounded-xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-[var(--color-coral)]/40"
      >
        <span class="relative z-10">Start a Conversation</span>
        <div class="absolute inset-0 bg-[var(--color-coral-light)] translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
      </a>
      <a 
        href="#studio"
        data-magnetic
        class="group px-8 py-4 border-2 border-[var(--color-ash)] text-[var(--color-cream)] font-semibold rounded-xl transition-all duration-300 hover:border-[var(--color-coral)] hover:text-[var(--color-coral)] hover:bg-[var(--color-coral)]/5"
      >
        Tour the Studio
      </a>
    </div>
    
    <!-- Stats bar -->
    <div class="mt-20 pt-10 border-t border-[var(--color-graphite)]/50 grid grid-cols-3 gap-8 max-w-xl mx-auto" data-animate="fade-up">
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-[var(--color-cream)]">50+</div>
        <div class="text-sm text-[var(--color-stone)] mt-1">Projects</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-[var(--color-cream)]">4</div>
        <div class="text-sm text-[var(--color-stone)] mt-1">Services</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-[var(--color-coral)]">1</div>
        <div class="text-sm text-[var(--color-stone)] mt-1">Studio</div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <a href="#services" class="flex flex-col items-center gap-2 text-[var(--color-stone)] hover:text-[var(--color-coral)] transition-colors group">
      <span class="text-xs tracking-widest uppercase">Scroll</span>
      <div class="w-6 h-10 rounded-full border-2 border-current flex justify-center pt-2">
        <div class="w-1 h-2 bg-current rounded-full animate-bounce"></div>
      </div>
    </a>
  </div>
  
  <!-- Corner accents -->
  <div class="absolute top-0 left-0 w-32 h-32 border-l-2 border-t-2 border-[var(--color-graphite)]/30 m-8"></div>
  <div class="absolute bottom-0 right-0 w-32 h-32 border-r-2 border-b-2 border-[var(--color-graphite)]/30 m-8"></div>
</section>

<style>
  .noise-bg {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }
  
  .text-gradient {
    background: linear-gradient(135deg, var(--color-coral) 0%, var(--color-sunset) 50%, var(--color-gold) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .animate-gradient {
    animation: gradient-shift 5s ease infinite;
  }
  
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
</style>
