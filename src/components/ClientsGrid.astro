---
// ClientsGrid.astro - Social proof grid of clients recording in the studio
const clientImages = [
  { src: '/images/clients/client-01.webp', alt: 'Client recording podcast at Eagle Idaho studio' },
  { src: '/images/clients/client-02.webp', alt: 'Business owner recording podcast in Boise area' },
  { src: '/images/clients/client-04.webp', alt: 'Professional podcast recording session Eagle Idaho' },
  { src: '/images/clients/client-06.webp', alt: 'Podcast guest at Aloha Media Studio Eagle' },
  { src: '/images/clients/client-07.webp', alt: 'Video recording session at professional Idaho studio' },
  { src: '/images/clients/client-08.webp', alt: 'Content creator at Eagle Idaho podcast studio' },
  { src: '/images/clients/client-09.webp', alt: 'Podcast episode recording in Treasure Valley' },
  { src: '/images/clients/client-10.webp', alt: 'Professional media recording Eagle Idaho' },
]
---

<section class="py-20 md:py-28 bg-[var(--color-charcoal)]">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-12">
      <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-3">
        Real Clients. Real Sessions.
      </p>
      <h2 class="text-3xl md:text-4xl font-bold text-[var(--color-cream)]">
        Clients in the Studio
      </h2>
    </div>

    <!-- Photo Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4">
      {clientImages.map((image, index) => (
        <div
          class:list={[
            "relative rounded-xl overflow-hidden aspect-video group",
            index === 0 || index === 5 ? "md:col-span-2 md:row-span-2 md:aspect-square" : ""
          ]}
        >
          <img
            src={image.src}
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            loading="lazy"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-void)]/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
      ))}
    </div>
  </div>
</section>
