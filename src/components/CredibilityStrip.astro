---
// CredibilityStrip - Quick trust indicators (2-second scan)
const stats = [
  { value: '200+', label: 'Episodes Delivered' },
  { value: '20-30k', label: 'Avg. Monthly Views Per Client' },
  { value: '10+', label: 'Shows Produced' }
]
---

<section id="credibility" class="py-8 md:py-10 bg-[var(--color-charcoal)] border-y border-[var(--color-graphite)]">
  <div class="max-w-5xl mx-auto px-6">
    <div class="flex flex-wrap justify-center gap-8 md:gap-16 lg:gap-24">
      {stats.map((stat, index) => (
        <div
          class="text-center"
          data-animate="fade-up"
          style={`--delay: ${index * 0.1}s`}
        >
          <div class="text-3xl md:text-4xl font-bold text-[var(--color-coral)]">
            {stat.value}
          </div>
          <div class="text-xs md:text-sm text-[var(--color-stone)] mt-1 uppercase tracking-wider">
            {stat.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
