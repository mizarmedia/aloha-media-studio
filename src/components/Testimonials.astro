---
// Testimonials section - structure for 1 real + more later
// TODO: Add real testimonial from Nation
const testimonials = [
  {
    quote: "Working with Aloha Media Studio transformed how we communicate our brand story. Their team understood our vision from day one and delivered beyond expectations.",
    author: "Client Name",
    title: "Position, Company",
    isPlaceholder: true, // Flag to remind Nation to update
  },
]
---

<section id="testimonials" class="py-24 md:py-32 bg-[var(--color-charcoal)]">
  <div class="max-w-4xl mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16" data-animate="fade-up">
      <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
        Testimonials
      </p>
      <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)]">
        What Clients Say
      </h2>
    </div>
    
    <!-- Testimonial -->
    {testimonials.map((testimonial) => (
      <div class="relative" data-animate="fade-up">
        <!-- Quote mark -->
        <div class="absolute -top-8 -left-4 text-8xl text-[var(--color-coral)]/20 font-serif leading-none select-none">
          "
        </div>
        
        <blockquote class="relative z-10">
          <p class="text-2xl md:text-3xl lg:text-4xl font-medium text-[var(--color-cream)] leading-relaxed mb-8">
            "{testimonial.quote}"
          </p>
          
          <footer class="flex items-center gap-4">
            <!-- Placeholder avatar -->
            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-[var(--color-coral)] to-[var(--color-sunset)] flex items-center justify-center text-[var(--color-void)] font-bold text-lg">
              {testimonial.author.charAt(0)}
            </div>
            <div>
              <cite class="not-italic font-semibold text-[var(--color-cream)]">
                {testimonial.author}
                {testimonial.isPlaceholder && (
                  <span class="ml-2 text-xs text-[var(--color-stone)] font-normal">(Update me!)</span>
                )}
              </cite>
              <p class="text-[var(--color-mist)] text-sm">{testimonial.title}</p>
            </div>
          </footer>
        </blockquote>
        
        <!-- Quote mark end -->
        <div class="absolute -bottom-8 -right-4 text-8xl text-[var(--color-coral)]/20 font-serif leading-none rotate-180 select-none">
          "
        </div>
      </div>
    ))}
    
    <!-- Note for multiple testimonials later -->
    <div class="mt-16 text-center">
      <p class="text-[var(--color-stone)] text-sm">
        More stories coming soon
      </p>
    </div>
  </div>
</section>
