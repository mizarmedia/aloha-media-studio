---
// Multi-page navigation header
const currentPath = Astro.url.pathname

const navLinks = [
  { label: 'The Podcast', href: '/', color: 'coral' },
  { label: 'The Studio', href: '/studio', color: 'blue' },
  { label: 'All Services', href: '/full-studio', color: 'coral' },
  { label: 'The Edit', href: '/the-edit', color: 'coral' },
]

// Highlight active page - homepage needs exact match, others use startsWith
const isActive = (href: string) => {
  if (href === '/') return currentPath === '/'
  if (href.startsWith('/#')) return false // Don't highlight anchor links
  return currentPath.startsWith(href)
}
---

<header class="fixed top-0 left-0 right-0 z-50" id="header">
  <nav class="mx-auto max-w-7xl px-6 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <img
        src="/images/logo/aloha-logo-color.webp"
        alt="Aloha Media Studio"
        class="h-12 md:h-14 w-auto max-w-[220px] object-contain transition-transform duration-300 group-hover:scale-105"
        width="220"
        height="56"
        fetchpriority="high"
      />
    </a>
    
    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center gap-10">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            "text-sm font-medium transition-colors duration-300 relative group",
            isActive(link.href)
              ? "text-[var(--color-cream)]"
              : "text-[var(--color-mist)] hover:text-[var(--color-cream)]"
          ]}
        >
          {link.label}
          <span class:list={[
            "absolute -bottom-1 left-0 h-px transition-all duration-300",
            link.color === 'blue' ? "bg-[var(--color-studio-blue)]" : "bg-[var(--color-coral)]",
            isActive(link.href) ? "w-full" : "w-0 group-hover:w-full"
          ]}></span>
        </a>
      ))}
      
      <!-- Start Your Podcast CTA - Hidden initially, appears on scroll -->
      <a
        href="/#contact"
        data-magnetic
        class="header-cta opacity-0 pointer-events-none relative px-6 py-2.5 bg-[var(--color-coral)] text-[var(--color-void)] text-sm font-semibold rounded-lg overflow-hidden group transition-all duration-300 hover:shadow-lg hover:shadow-[var(--color-coral)]/25"
      >
        <span class="relative z-10">Start Your Podcast</span>
        <div class="absolute inset-0 bg-[var(--color-coral-light)] translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
      </a>
    </div>
    
    <!-- Mobile Menu Button -->
    <button 
      class="lg:hidden p-2 text-[var(--color-cream)] hover:text-[var(--color-coral)] transition-colors"
      id="mobile-menu-btn"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6 menu-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg class="w-6 h-6 menu-close hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>
  
  <!-- Mobile Menu -->
  <div class="lg:hidden hidden" id="mobile-menu">
    <div class="px-6 py-8 bg-[var(--color-charcoal)]/95 backdrop-blur-xl border-t border-[var(--color-graphite)]">
      <div class="space-y-1">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class="block py-3 px-4 text-lg text-[var(--color-mist)] hover:text-[var(--color-cream)] hover:bg-[var(--color-slate)] rounded-lg transition-all duration-200"
          >
            {link.label}
          </a>
        ))}
      </div>
      <div class="mt-6 pt-6 border-t border-[var(--color-graphite)]">
        <a
          href="/#contact"
          class="block w-full px-6 py-4 bg-[var(--color-coral)] text-[var(--color-void)] text-center font-semibold rounded-lg"
        >
          Start Your Podcast
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Header scroll effect - background at 50px, CTA at 80% viewport
  const header = document.getElementById('header')
  const headerCTA = document.querySelector('.header-cta')
  let headerState = { bg: false, cta: false }

  const updateHeader = () => {
    const scrollY = window.scrollY
    const shouldShowBg = scrollY > 50
    const shouldShowCta = scrollY > window.innerHeight * 0.8

    // Only update if state changed
    if (shouldShowBg !== headerState.bg) {
      headerState.bg = shouldShowBg
      header?.classList.toggle('header-scrolled', shouldShowBg)
    }

    if (shouldShowCta !== headerState.cta) {
      headerState.cta = shouldShowCta
      headerCTA?.classList.toggle('header-cta-visible', shouldShowCta)
    }
  }

  window.addEventListener('scroll', updateHeader, { passive: true })
  updateHeader() // Run on load
  
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn')
  const mobileMenu = document.getElementById('mobile-menu')
  const menuOpen = mobileMenuBtn?.querySelector('.menu-open')
  const menuClose = mobileMenuBtn?.querySelector('.menu-close')

  function openMobileMenu() {
    mobileMenu?.classList.remove('hidden')
    menuOpen?.classList.add('hidden')
    menuClose?.classList.remove('hidden')
    header?.classList.add('header-menu-open')
  }

  function closeMobileMenu() {
    mobileMenu?.classList.add('hidden')
    menuOpen?.classList.remove('hidden')
    menuClose?.classList.add('hidden')
    header?.classList.remove('header-menu-open')
  }

  mobileMenuBtn?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden')
    if (isOpen) {
      closeMobileMenu()
    } else {
      openMobileMenu()
    }
  })

  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMobileMenu)
  })
</script>

<style>
  #header {
    transition: background-color 0.3s ease, backdrop-filter 0.3s ease, box-shadow 0.3s ease;
  }

  #header nav {
    transition: padding 0.3s ease;
    padding-top: 1.25rem;
    padding-bottom: 1.25rem;
  }

  #header.header-scrolled,
  #header.header-menu-open {
    background-color: rgba(10, 10, 12, 0.9);
    backdrop-filter: blur(16px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.2);
  }

  #header.header-scrolled nav {
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
  }

  .header-cta {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .header-cta.header-cta-visible {
    opacity: 1;
    pointer-events: auto;
  }
</style>
