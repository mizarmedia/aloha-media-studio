---
// Multi-page navigation header
const currentPath = Astro.url.pathname

const navLinks = [
  { label: 'Work', href: '/#work' },
  { label: 'Services', href: '/#services' },
  { label: 'Studio', href: '/#studio' },
  { label: 'The Edit', href: '/the-edit' },
]

// Only highlight non-hash pages (The Edit, etc.) - hash links don't get highlighted
const isActive = (href: string) => {
  if (href.startsWith('/#')) return false // Don't highlight anchor links
  return currentPath.startsWith(href)
}
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-500" id="header">
  <nav class="mx-auto max-w-7xl px-6 py-5 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <img 
        src="/images/logo/aloha-media-logo.png" 
        alt="Aloha Media Studio" 
        class="h-12 md:h-14 w-auto max-w-[220px] object-contain transition-transform duration-300 group-hover:scale-105"
      />
    </a>
    
    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center gap-10">
      {navLinks.map((link) => (
        <a 
          href={link.href}
          class:list={[
            "text-sm font-medium transition-colors duration-300 relative group",
            isActive(link.href) 
              ? "text-[var(--color-cream)]" 
              : "text-[var(--color-mist)] hover:text-[var(--color-cream)]"
          ]}
        >
          {link.label}
          <span class:list={[
            "absolute -bottom-1 left-0 h-px bg-[var(--color-coral)] transition-all duration-300",
            isActive(link.href) ? "w-full" : "w-0 group-hover:w-full"
          ]}></span>
        </a>
      ))}
      
      <!-- Book Studio CTA -->
      <a 
        href="/studio"
        data-magnetic
        class="relative px-6 py-2.5 bg-[var(--color-coral)] text-[var(--color-void)] text-sm font-semibold rounded-lg overflow-hidden group transition-all duration-300 hover:shadow-lg hover:shadow-[var(--color-coral)]/25"
      >
        <span class="relative z-10">Book the Studio</span>
        <div class="absolute inset-0 bg-[var(--color-coral-light)] translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
      </a>
    </div>
    
    <!-- Mobile Menu Button -->
    <button 
      class="lg:hidden p-2 text-[var(--color-cream)] hover:text-[var(--color-coral)] transition-colors"
      id="mobile-menu-btn"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6 menu-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg class="w-6 h-6 menu-close hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>
  
  <!-- Mobile Menu -->
  <div class="lg:hidden hidden" id="mobile-menu">
    <div class="px-6 py-8 bg-[var(--color-charcoal)]/95 backdrop-blur-xl border-t border-[var(--color-graphite)]">
      <div class="space-y-1">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class="block py-3 px-4 text-lg text-[var(--color-mist)] hover:text-[var(--color-cream)] hover:bg-[var(--color-slate)] rounded-lg transition-all duration-200"
          >
            {link.label}
          </a>
        ))}
      </div>
      <div class="mt-6 pt-6 border-t border-[var(--color-graphite)]">
        <a 
          href="/studio"
          class="block w-full px-6 py-4 bg-[var(--color-coral)] text-[var(--color-void)] text-center font-semibold rounded-lg"
        >
          Book the Studio
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Header scroll effect
  const header = document.getElementById('header')
  
  const updateHeader = () => {
    if (window.scrollY > 50) {
      header?.classList.add('bg-[var(--color-void)]/90', 'backdrop-blur-xl', 'shadow-2xl', 'shadow-black/20', 'py-3')
      header?.classList.remove('py-5')
    } else {
      header?.classList.remove('bg-[var(--color-void)]/90', 'backdrop-blur-xl', 'shadow-2xl', 'shadow-black/20', 'py-3')
      header?.classList.add('py-5')
    }
  }
  
  window.addEventListener('scroll', updateHeader)
  updateHeader() // Run on load
  
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn')
  const mobileMenu = document.getElementById('mobile-menu')
  const menuOpen = mobileMenuBtn?.querySelector('.menu-open')
  const menuClose = mobileMenuBtn?.querySelector('.menu-close')
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden')
    menuOpen?.classList.toggle('hidden')
    menuClose?.classList.toggle('hidden')
  })
  
  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden')
      menuOpen?.classList.remove('hidden')
      menuClose?.classList.add('hidden')
    })
  })
</script>

<style>
  #header nav {
    transition: padding 0.3s ease;
  }
</style>
