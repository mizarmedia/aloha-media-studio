---
const services = [
  {
    title: 'Video',
    description: 'From brand stories to interviews and campaigns. We plan, film, edit, and deliver videos that connect with your audience.',
    icon: 'video',
  },
  {
    title: 'Photography',
    description: 'Professional images that bring your brand to life. Portraits, products, events, and headshots designed to feel authentic.',
    icon: 'camera',
  },
  {
    title: 'Podcasts',
    description: 'Recording, editing, and publishing. Focus on your message while we handle the technical side.',
    icon: 'mic',
  },
  {
    title: 'Branding',
    description: 'Logos, visual identity, and website design. We create cohesive brands that help your audience recognize and trust you.',
    icon: 'palette',
  },
]

const icons = {
  video: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />`,
  camera: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />`,
  mic: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />`,
  palette: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`,
}
---

<section id="services" class="py-24 md:py-32 bg-[var(--color-charcoal)]">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16 md:mb-20" data-animate="fade-up">
      <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
        Our Services
      </p>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--color-cream)] mb-6">
        Areas of Expertise
      </h2>
      <p class="text-[var(--color-mist)] text-lg max-w-2xl mx-auto">
        We believe in clarity first, creativity with purpose, and partnership built on trust.
      </p>
    </div>
    
    <!-- Services grid -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8" data-animate-stagger>
      {services.map((service, index) => (
        <div 
          class="group relative p-8 md:p-10 bg-[var(--color-slate)] rounded-2xl border border-[var(--color-graphite)] hover:border-[var(--color-coral)]/50 transition-all duration-500 hover:-translate-y-1 hover:shadow-2xl hover:shadow-[var(--color-coral)]/5"
          data-animate-child
        >
          <!-- Icon -->
          <div class="w-14 h-14 mb-6 rounded-xl bg-gradient-to-br from-[var(--color-coral)]/20 to-[var(--color-sunset)]/10 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[service.icon as keyof typeof icons]} />
          </div>
          
          <!-- Content -->
          <h3 class="text-2xl font-bold text-[var(--color-cream)] mb-4 group-hover:text-[var(--color-coral)] transition-colors duration-300">
            {service.title}
          </h3>
          <p class="text-[var(--color-mist)] leading-relaxed">
            {service.description}
          </p>
          
          <!-- Hover accent -->
          <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-[var(--color-coral)]/5 to-transparent rounded-tr-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section>
