---
// ThePackage.astro - Clear statement of the core offering
const phases = [
  {
    number: '01',
    title: 'Pre-Production',
    description: 'Strategy, episode planning, and guest coordination'
  },
  {
    number: '02',
    title: 'Production',
    description: 'Multi-camera recording in our Eagle studio'
  },
  {
    number: '03',
    title: 'Post-Production',
    description: 'Editing, color grading, graphics, sound design'
  },
  {
    number: '04',
    title: 'Distribution',
    description: 'YouTube, Spotify, Apple Podcasts, and more'
  },
]
---

<section class="py-20 md:py-28 bg-[var(--color-void)]">
  <div class="max-w-5xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-[var(--color-cream)] mb-4" data-animate="fade-up">
        Your Podcast. <span class="text-[var(--color-coral)]">Season One.</span>
      </h2>
      <p class="text-lg md:text-xl text-[var(--color-mist)]" data-animate="fade-up">
        6 episodes. Full-service production. Launch in 90 days.
      </p>
    </div>

    <!-- 4 Phases Grid - 2x2 on mobile, 4 across on desktop -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 md:gap-6">
      {phases.map((phase) => (
        <div class="text-center p-3 md:p-6 rounded-xl border border-[var(--color-graphite)] bg-[var(--color-charcoal)]/30">
          <div class="inline-flex items-center justify-center w-8 h-8 md:w-10 md:h-10 rounded-full bg-[var(--color-coral)]/10 border border-[var(--color-coral)]/30 mb-2 md:mb-4">
            <span class="text-xs md:text-sm font-mono font-bold text-[var(--color-coral)]">{phase.number}</span>
          </div>
          <h3 class="text-sm md:text-lg font-bold text-[var(--color-cream)] mb-1 md:mb-2">{phase.title}</h3>
          <p class="text-xs md:text-sm text-[var(--color-mist)] leading-snug">{phase.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
