---
// Services - Minimal, cinematic approach
// Research: Brief, scannable, visual
const services = [
  {
    title: "Video Production",
    description: "Brand films, events, social content",
    icon: "film"
  },
  {
    title: "Photography",
    description: "Portrait, business, events",
    icon: "camera"
  },
  {
    title: "Podcasting",
    description: "Full production, editing, distribution",
    icon: "mic"
  },
  {
    title: "Branding",
    description: "Storytelling, identity, web design",
    icon: "palette"
  }
]

const icons: Record<string, string> = {
  film: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />`,
  camera: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />`,
  mic: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />`,
  palette: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`
}
---

<section id="services" class="py-24 md:py-32 bg-[var(--color-void)]">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16">
      <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
        What We Do
      </p>
      <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)]">
        Full-service creative studio
      </h2>
    </div>
    
    <!-- Services grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      {services.map((service) => (
        <div class="group text-center p-6 md:p-8 rounded-2xl border border-[var(--color-graphite)] hover:border-[var(--color-coral)]/50 transition-all duration-300 hover:bg-[var(--color-charcoal)]">
          <div class="w-12 h-12 mx-auto mb-4 text-[var(--color-coral)] group-hover:scale-110 transition-transform duration-300">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[service.icon]} />
          </div>
          <h3 class="text-lg font-semibold text-[var(--color-cream)] mb-2">
            {service.title}
          </h3>
          <p class="text-sm text-[var(--color-stone)]">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
