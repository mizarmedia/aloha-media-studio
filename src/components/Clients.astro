---
// Client logos - brands worked with and brands built
const clientsWorkedWith = [
  { src: '/images/clients-worked-with/client-1.png', alt: 'Client 1' },
  { src: '/images/clients-worked-with/client-2.png', alt: 'Client 2' },
  { src: '/images/clients-worked-with/client-3.png', alt: 'Client 3' },
  { src: '/images/clients-worked-with/client-4.png', alt: 'Client 4' },
  { src: '/images/clients-worked-with/client-6.png', alt: 'Client 6' },
  { src: '/images/clients-worked-with/client-7.png', alt: 'Client 7' },
  { src: '/images/clients-worked-with/client-8.png', alt: 'Client 8' },
  { src: '/images/clients-worked-with/client-9.png', alt: 'Client 9' },
  { src: '/images/clients-worked-with/client-10.png', alt: 'Client 10' },
  { src: '/images/clients-worked-with/client-11.png', alt: 'Client 11' },
]

const clientsBuilt = [
  { src: '/images/clients-built/client-14.png', alt: 'Brand 14' },
  { src: '/images/clients-built/client-15.png', alt: 'Brand 15' },
  { src: '/images/clients-built/client-16.png', alt: 'Brand 16' },
  { src: '/images/clients-built/client-17.png', alt: 'Brand 17' },
  { src: '/images/clients-built/client-18.png', alt: 'Brand 18' },
  { src: '/images/clients-built/client-20.png', alt: 'Brand 20' },
  { src: '/images/clients-built/client-21.png', alt: 'Brand 21' },
  { src: '/images/clients-built/client-22.png', alt: 'Brand 22' },
  { src: '/images/clients-built/client-23.png', alt: 'Brand 23' },
  { src: '/images/clients-built/ams-logos.png', alt: 'AMS Logos' },
]
---

<section id="clients" class="py-24 md:py-32 bg-[var(--color-charcoal)]">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Brands We've Worked With -->
    <div class="mb-20">
      <div class="text-center mb-12" data-animate="fade-up">
        <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
          Our Clients
        </p>
        <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)]">
          Brands We've Worked With
        </h2>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6" data-animate-stagger>
        {clientsWorkedWith.map((client) => (
          <div class="group relative aspect-video bg-[var(--color-slate)] rounded-xl p-6 flex items-center justify-center border border-[var(--color-graphite)] hover:border-[var(--color-ash)] transition-all duration-300 hover:-translate-y-1" data-animate-child>
            <img 
              src={client.src} 
              alt={client.alt}
              class="max-w-full max-h-full object-contain filter brightness-90 group-hover:brightness-110 transition-all duration-300"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
    
    <!-- Brands We've Built -->
    <div>
      <div class="text-center mb-12" data-animate="fade-up">
        <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-cream)]">
          Brands We've Built
        </h2>
        <p class="mt-4 text-[var(--color-mist)] text-lg">
          Complete brand identities crafted from scratch
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6" data-animate-stagger>
        {clientsBuilt.map((client) => (
          <div class="group relative aspect-video bg-[var(--color-slate)] rounded-xl p-6 flex items-center justify-center border border-[var(--color-graphite)] hover:border-[var(--color-coral)]/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-[var(--color-coral)]/5" data-animate-child>
            <img 
              src={client.src} 
              alt={client.alt}
              class="max-w-full max-h-full object-contain filter brightness-90 group-hover:brightness-110 transition-all duration-300"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
