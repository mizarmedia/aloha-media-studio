---
// ProcessOverview - Visual 3-step process with brief descriptions
const steps = [
  {
    number: "01",
    title: "One Call. Six Episodes.",
    description: "One strategy call. We map your topics, guests, and episode flow."
  },
  {
    number: "02",
    title: "You Show Up & Talk",
    description: "45 minutes per episode in our Eagle studio. Cameras, lights, audio handled."
  },
  {
    number: "03",
    title: "We Deliver Your Show",
    description: "Full editing, your branding, published to YouTube, Spotify, and Apple Podcasts."
  }
]
---

<section class="py-20 md:py-28 bg-[var(--color-void)]">
  <div class="max-w-5xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-[var(--color-cream)]" data-animate="fade-up">
        Your Only Job: Show Up and Talk
      </h2>
    </div>

    <!-- Steps -->
    <div class="grid md:grid-cols-3 gap-8 md:gap-12">
      {steps.map((step, index) => (
        <div
          class="text-center"
          data-animate="fade-up"
          style={`--delay: ${index * 0.15}s`}
        >
          <!-- Number -->
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[var(--color-charcoal)] border-2 border-[var(--color-coral)] mb-6">
            <span class="text-xl font-bold text-[var(--color-coral)]">{step.number}</span>
          </div>

          <!-- Content -->
          <h3 class="text-xl font-semibold text-[var(--color-cream)] mb-3">
            {step.title}
          </h3>
          <p class="text-[var(--color-mist)] text-sm leading-relaxed">
            {step.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
