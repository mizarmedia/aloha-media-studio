---
// ProcessOverview - Hybrid Timeline + Render Queue
// Two-act story: Episode Assembly (0-55%) â†’ Render Queue (60-100%)

// Timeline clips - realistic podcast episode structure
const timelineClips = {
  V1: [
    { id: 'planning', label: 'PLANNING', start: 0, width: 18, color: 'slate' },
    { id: 'hook', label: 'HOOK', start: 20, width: 8, color: 'coral' },
    { id: 'intro', label: 'INTRO', start: 30, width: 12, color: 'coral' },
    { id: 'main', label: 'MAIN INTERVIEW', start: 44, width: 35, color: 'coral' },
    { id: 'outro', label: 'OUTRO', start: 82, width: 16, color: 'coral' },
  ],
  V2: [
    { id: 'guest2', label: 'GUEST CAM', start: 30, width: 48, color: 'blue' },
  ],
  V3: [
    { id: 'guest3', label: 'HOST CAM', start: 30, width: 48, color: 'blue' },
  ],
  A1: [
    { id: 'main-audio', label: '', start: 20, width: 78, color: 'emerald' },
  ],
  A2: [
    { id: 'guest-mic', label: '', start: 30, width: 48, color: 'emerald' },
  ],
  A3: [
    { id: 'music', label: '', start: 82, width: 16, color: 'amber' },
  ],
}

const tracks = [
  { id: 'V3', type: 'video', label: 'V3' },
  { id: 'V2', type: 'video', label: 'V2' },
  { id: 'V1', type: 'video', label: 'V1' },
  { id: 'A1', type: 'audio', label: 'A1' },
  { id: 'A2', type: 'audio', label: 'A2' },
  { id: 'A3', type: 'audio', label: 'A3' },
]

// Render queue jobs
const renderJobs = [
  {
    id: 'editing',
    title: 'VIDEO EDITING',
    description: 'Cuts, color grade, graphics, transitions',
    icon: 'film'
  },
  {
    id: 'thumbnail',
    title: 'THUMBNAIL & METADATA',
    description: 'Custom artwork, titles, SEO tags, descriptions',
    icon: 'image'
  },
  {
    id: 'publish',
    title: 'MULTI-PLATFORM PUBLISH',
    description: 'YouTube, Spotify, Apple Podcasts, RSS',
    icon: 'upload'
  }
]

// Timeline phase labels
const phases = [
  { label: 'PRE-PROD', start: 0, width: 20 },
  { label: 'RECORDING', start: 20, width: 60 },
  { label: 'POST', start: 80, width: 20 },
]

// Mobile cards
const mobileCards = [
  {
    step: '01',
    title: 'Planning',
    description: 'Strategy session & topic mapping',
    color: 'slate',
    icon: 'clipboard'
  },
  {
    step: '02',
    title: 'Recording',
    description: 'Multi-camera studio session',
    color: 'blue',
    icon: 'video'
  },
  {
    step: '03',
    title: 'Editing',
    description: 'Professional post-production',
    color: 'coral',
    icon: 'edit'
  },
  {
    step: '04',
    title: 'Published',
    description: 'Live on all platforms',
    color: 'emerald',
    icon: 'check'
  }
]
---

<!-- Desktop: Hybrid Timeline + Render Queue -->
<section id="process" class="hidden md:block bg-[var(--color-void)]" data-timeline-section>
  <!-- 400vh for full scroll distance -->
  <div class="h-[400vh]">

    <!-- Sticky container -->
    <div class="sticky top-0 h-screen flex flex-col justify-center overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 w-full">

        <!-- Header - changes based on act -->
        <div class="mb-8">
          <p class="text-sm uppercase tracking-widest text-[var(--color-coral)] mb-2">
            How It Works
          </p>
          <h2 class="text-3xl lg:text-4xl font-bold text-[var(--color-cream)]" data-act-header>
            Your Content. <span class="text-[var(--color-coral)]">Our Timeline.</span>
          </h2>
        </div>

        <!-- ACT 1: Timeline Container -->
        <div data-act-timeline class="transition-all duration-500">
          <div
            class="relative bg-[var(--color-charcoal)] rounded-xl border border-[var(--color-graphite)] overflow-hidden"
            data-timeline-ui
          >

            <!-- Phase Labels Bar -->
            <div class="relative h-7 bg-[var(--color-slate)]/50 border-b border-[var(--color-graphite)] flex items-center">
              <div class="w-12 flex-shrink-0"></div>
              <div class="flex-1 relative">
                <div class="absolute inset-0 flex" data-phase-labels>
                  {phases.map(phase => (
                    <div
                      class="absolute h-full flex items-center justify-center"
                      style={`left: ${phase.start}%; width: ${phase.width}%;`}
                    >
                      <span class="text-[10px] uppercase tracking-wider text-[var(--color-stone)] font-medium">
                        {phase.label}
                      </span>
                      <div class="absolute right-0 top-0 bottom-0 w-px bg-[var(--color-graphite)]/50"></div>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <!-- Timecode Ruler -->
            <div
              class="relative h-6 bg-[var(--color-slate)] border-b border-[var(--color-graphite)] flex items-center"
              data-timecode-bar
            >
              <div class="w-12 flex-shrink-0 border-r border-[var(--color-graphite)]"></div>
              <div class="flex-1 relative overflow-hidden">
                <div class="absolute inset-0 flex" data-timecode-markers>
                  {Array.from({ length: 20 }).map((_, i) => (
                    <div class="flex-1 border-r border-[var(--color-graphite)]/20 last:border-r-0 relative">
                      {i % 4 === 0 && (
                        <span class="absolute -top-0.5 left-0 text-[9px] font-mono text-[var(--color-stone)]/60">
                          {String(Math.floor(i / 4 * 5)).padStart(2, '0')}:00
                        </span>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <!-- Playhead -->
            <div
              class="absolute top-[52px] bottom-0 w-0.5 bg-[var(--color-coral)] z-20 pointer-events-none transition-opacity duration-300"
              style="left: 52px;"
              data-playhead
            >
              <div class="absolute -top-0 left-1/2 -translate-x-1/2 w-0 h-0 border-l-[6px] border-r-[6px] border-t-[8px] border-transparent border-t-[var(--color-coral)]"></div>
            </div>

            <!-- Tracks Container -->
            <div class="flex">
              <!-- Track Labels -->
              <div class="w-12 flex-shrink-0 bg-[var(--color-slate)] border-r border-[var(--color-graphite)]">
                {tracks.map((track) => (
                  <div
                    class={`h-10 flex items-center justify-center font-mono text-xs border-b border-[var(--color-graphite)]/50 ${
                      track.type === 'video' ? 'text-[var(--color-mist)]' : 'text-emerald-400/70'
                    }`}
                  >
                    {track.label}
                  </div>
                ))}
              </div>

              <!-- Tracks Content -->
              <div class="flex-1 relative overflow-hidden">
                <div class="relative" data-tracks-content>
                  {tracks.map((track, trackIndex) => (
                    <div
                      class={`h-10 relative border-b border-[var(--color-graphite)]/30 ${
                        trackIndex % 2 === 0 ? 'bg-[var(--color-void)]/50' : 'bg-[var(--color-slate)]/20'
                      }`}
                      data-track={track.id}
                    >
                      <!-- Grid lines -->
                      <div class="absolute inset-0 flex pointer-events-none">
                        {Array.from({ length: 20 }).map(() => (
                          <div class="flex-1 border-r border-[var(--color-graphite)]/10"></div>
                        ))}
                      </div>

                      <!-- Clips for this track -->
                      {timelineClips[track.id as keyof typeof timelineClips]?.map(clip => {
                        const colorMap = {
                          coral: 'bg-[var(--color-coral)]/80 border-[var(--color-coral)]',
                          blue: 'bg-blue-600/70 border-blue-500',
                          slate: 'bg-[var(--color-slate)] border-[var(--color-stone)]',
                          emerald: 'bg-emerald-600/70 border-emerald-500',
                          amber: 'bg-amber-500/70 border-amber-400',
                        }
                        return (
                          <div
                            class={`absolute top-1 bottom-1 rounded border transition-all duration-300 ${colorMap[clip.color as keyof typeof colorMap]}`}
                            style={`left: ${clip.start}%; width: ${clip.width}%; opacity: 0;`}
                            data-clip={clip.id}
                            data-clip-start={clip.start}
                          >
                            {clip.label && (
                              <div class="absolute inset-0 flex items-center px-2 overflow-hidden">
                                <span class="text-[10px] font-medium text-white/90 truncate">{clip.label}</span>
                              </div>
                            )}
                            {/* Waveform for audio */}
                            {track.type === 'audio' && (
                              <div class="absolute inset-0 flex items-center overflow-hidden opacity-60 px-1">
                                <svg class="w-full h-5" viewBox="0 0 100 20" preserveAspectRatio="none">
                                  <path
                                    d="M0,10 L2,8 L4,12 L6,6 L8,14 L10,7 L12,13 L14,5 L16,15 L18,8 L20,12 L22,6 L24,14 L26,7 L28,13 L30,9 L32,11 L34,8 L36,12 L38,6 L40,14 L42,7 L44,13 L46,5 L48,15 L50,8 L52,12 L54,6 L56,14 L58,7 L60,13 L62,9 L64,11 L66,8 L68,12 L70,6 L72,14 L74,7 L76,13 L78,5 L80,15 L82,8 L84,12 L86,6 L88,14 L90,7 L92,13 L94,9 L96,11 L98,8 L100,10"
                                    fill="none"
                                    stroke="white"
                                    stroke-width="1.5"
                                  />
                                </svg>
                              </div>
                            )}
                          </div>
                        )
                      })}
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <!-- Current timecode -->
            <div class="absolute bottom-2 right-4 font-mono text-sm text-[var(--color-coral)] bg-[var(--color-void)]/80 px-2 py-1 rounded" data-current-timecode>
              00:00:00
            </div>
          </div>

          <!-- Timeline Detail Panel -->
          <div class="mt-6 p-6 bg-[var(--color-charcoal)]/50 rounded-xl border border-[var(--color-graphite)] min-h-[140px]" data-timeline-detail>
            <div data-detail-planning class="block">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-3 h-10 rounded bg-[var(--color-slate)]"></div>
                <div>
                  <h3 class="text-lg font-bold text-[var(--color-cream)]">Pre-Production</h3>
                  <p class="text-sm text-[var(--color-mist)]">Strategy & Planning</p>
                </div>
              </div>
              <ul class="grid grid-cols-2 gap-x-8 gap-y-2">
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  60-minute strategy session
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Define podcast format and style
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Map out your first 6 episode topics
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Guest strategy and outreach
                </li>
              </ul>
            </div>
            <div data-detail-recording class="hidden">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-3 h-10 rounded bg-blue-600"></div>
                <div>
                  <h3 class="text-lg font-bold text-[var(--color-cream)]">Recording Session</h3>
                  <p class="text-sm text-[var(--color-mist)]">Multi-Camera Studio</p>
                </div>
              </div>
              <ul class="grid grid-cols-2 gap-x-8 gap-y-2">
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Professional studio in Eagle, Idaho
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Multi-camera video setup
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Broadcast-quality audio
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  On-camera coaching if needed
                </li>
              </ul>
            </div>
            <div data-detail-post class="hidden">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-3 h-10 rounded bg-[var(--color-coral)]"></div>
                <div>
                  <h3 class="text-lg font-bold text-[var(--color-cream)]">Post-Production</h3>
                  <p class="text-sm text-[var(--color-mist)]">Edit & Polish</p>
                </div>
              </div>
              <ul class="grid grid-cols-2 gap-x-8 gap-y-2">
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Full video and audio editing
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Color grading and graphics
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Intro/outro music and sound design
                </li>
                <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                  <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Ready for distribution
                </li>
              </ul>
            </div>
          </div>

          <!-- Scroll hint -->
          <div class="mt-4 text-center text-sm text-[var(--color-stone)] opacity-60" data-scroll-hint>
            <span class="inline-flex items-center gap-2">
              <svg class="w-4 h-4 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
              Scroll to advance timeline
            </span>
          </div>
        </div>

        <!-- ACT 2: Render Queue Container (hidden initially) -->
        <div data-act-render class="absolute inset-x-6 opacity-0 pointer-events-none transition-all duration-500" style="transform: translateX(100px);">
          <div class="relative bg-[var(--color-charcoal)] rounded-xl border border-[var(--color-graphite)] overflow-hidden">

            <!-- Queue Header -->
            <div class="flex items-center justify-between px-6 py-4 border-b border-[var(--color-graphite)] bg-[var(--color-slate)]/30">
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 rounded-full bg-[var(--color-coral)] animate-pulse" data-queue-indicator></div>
                <span class="font-mono text-sm text-[var(--color-cream)]">EXPORT QUEUE</span>
              </div>
              <span class="text-xs text-[var(--color-stone)] font-mono" data-queue-status>Processing...</span>
            </div>

            <!-- Queue Items -->
            <div class="p-6 space-y-6">
              {renderJobs.map((job, index) => (
                <div class="relative" data-render-job={job.id}>
                  <!-- Job Header -->
                  <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center gap-3">
                      <div class="w-6 h-6 rounded-full bg-[var(--color-void)] border border-[var(--color-graphite)] flex items-center justify-center" data-job-icon={job.id}>
                        <svg class="w-3 h-3 text-[var(--color-stone)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          {job.icon === 'film' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />}
                          {job.icon === 'image' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />}
                          {job.icon === 'upload' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />}
                        </svg>
                      </div>
                      <div>
                        <span class="text-sm font-medium text-[var(--color-cream)]">{job.title}</span>
                        <p class="text-xs text-[var(--color-stone)]">{job.description}</p>
                      </div>
                    </div>
                    <span class="text-xs font-mono text-[var(--color-stone)]" data-job-status={job.id}>QUEUED</span>
                  </div>

                  <!-- Progress Bar -->
                  <div class="h-2 bg-[var(--color-void)] rounded-full overflow-hidden">
                    <div
                      class="h-full bg-gradient-to-r from-[var(--color-coral)] to-[var(--color-coral)]/80 rounded-full transition-all duration-300"
                      style="width: 0%;"
                      data-job-progress={job.id}
                    ></div>
                  </div>

                  <!-- Percentage -->
                  <div class="absolute right-0 top-0 text-xs font-mono text-[var(--color-coral)]" data-job-percent={job.id}>0%</div>
                </div>
              ))}
            </div>
          </div>

          <!-- Render Detail Panel -->
          <div class="mt-6 p-6 bg-[var(--color-charcoal)]/50 rounded-xl border border-[var(--color-graphite)] min-h-[140px]" data-render-detail>
            <div class="flex items-center gap-4 mb-4">
              <div class="w-10 h-10 rounded-lg bg-[var(--color-coral)]/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-[var(--color-cream)]">Distribution Pipeline</h3>
                <p class="text-sm text-[var(--color-mist)]">We handle all the technical details</p>
              </div>
            </div>
            <ul class="grid grid-cols-2 gap-x-8 gap-y-2">
              <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                Custom thumbnails for each episode
              </li>
              <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                SEO-optimized titles and descriptions
              </li>
              <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                Published to all major platforms
              </li>
              <li class="flex items-center gap-2 text-sm text-[var(--color-mist)]">
                <svg class="w-4 h-4 text-[var(--color-coral)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                Social media clips included
              </li>
            </ul>
          </div>
        </div>

        <!-- SUCCESS STATE: Episode Live (hidden initially) -->
        <div data-act-success class="absolute inset-x-6 opacity-0 pointer-events-none transition-all duration-500 scale-95">
          <div class="relative bg-gradient-to-b from-[var(--color-charcoal)] to-[var(--color-void)] rounded-xl border border-[var(--color-coral)]/30 overflow-hidden p-8">

            <!-- Confetti particles -->
            <div class="absolute inset-0 pointer-events-none overflow-hidden" data-confetti>
              {Array.from({ length: 20 }).map((_, i) => (
                <div
                  class="absolute w-2 h-2 rounded-full opacity-0"
                  style={`left: ${10 + (i * 4)}%; top: -10%; background: ${['var(--color-coral)', '#3B82F6', '#22C55E', '#F59E0B'][i % 4]};`}
                  data-confetti-particle={i}
                ></div>
              ))}
            </div>

            <!-- Success Content -->
            <div class="relative text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-emerald-500/20 border-2 border-emerald-500 mb-6" data-success-icon>
                <svg class="w-8 h-8 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>

              <h3 class="text-2xl lg:text-3xl font-bold text-[var(--color-cream)] mb-2">
                Your Episode is <span class="text-[var(--color-coral)]">Live</span>
              </h3>
