---
// Contact section with form
---

<section id="contact" class="py-24 md:py-32 bg-[var(--color-void)]">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
      <!-- Content side -->
      <div data-animate="fade-up">
        <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
          Get in Touch
        </p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--color-cream)] mb-6">
          Let's start a 
          <span class="bg-gradient-to-r from-[var(--color-coral)] to-[var(--color-sunset)] bg-clip-text text-transparent">
            conversation
          </span>
        </h2>
        <p class="text-[var(--color-mist)] text-lg mb-10 leading-relaxed">
          Every great project starts with a conversation. Tell us about your story, your goals, or your next idea, and we'll help you shape it into something meaningful.
        </p>
        
        <!-- Contact info -->
        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-[var(--color-charcoal)] flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-[var(--color-cream)]">Email</p>
              <a href="mailto:media@alohapublishing.com" class="text-[var(--color-mist)] hover:text-[var(--color-coral)] transition-colors">
                media@alohapublishing.com
              </a>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-[var(--color-charcoal)] flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-[var(--color-cream)]">Hours</p>
              <p class="text-[var(--color-mist)]">Monday - Friday, 10am - 5pm</p>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-[var(--color-charcoal)] flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-[var(--color-cream)]">Location</p>
              <p class="text-[var(--color-mist)]">Eagle, Idaho</p>
            </div>
          </div>
        </div>
        
        <!-- Social links -->
        <div class="mt-10 pt-10 border-t border-[var(--color-graphite)]">
          <p class="text-sm text-[var(--color-stone)] mb-4">Follow us</p>
          <div class="flex gap-4">
            <a href="https://www.youtube.com/@AlohaMediaStudio" target="_blank" rel="noopener" class="w-10 h-10 rounded-lg bg-[var(--color-charcoal)] flex items-center justify-center text-[var(--color-mist)] hover:text-[var(--color-coral)] hover:bg-[var(--color-slate)] transition-all duration-200">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Form side -->
      <div data-animate="fade-up" data-animate-delay="0.2">
        <form 
          action="https://formsubmit.co/media@alohapublishing.com" 
          method="POST"
          class="bg-[var(--color-charcoal)] rounded-2xl p-8 md:p-10 border border-[var(--color-graphite)]"
        >
          <!-- FormSubmit config -->
          <input type="hidden" name="_subject" value="New inquiry from Aloha Media Studio website">
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_template" value="table">
          <input type="text" name="_honey" style="display:none">
          
          <div class="space-y-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-[var(--color-cream)] mb-2">
                Name
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors"
                placeholder="Your name"
              />
            </div>
            
            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-[var(--color-cream)] mb-2">
                Email
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors"
                placeholder="your@email.com"
              />
            </div>
            
            <!-- Project type -->
            <div>
              <label for="project" class="block text-sm font-medium text-[var(--color-cream)] mb-2">
                What can we help with?
              </label>
              <select 
                id="project" 
                name="project"
                class="w-full px-4 py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-[var(--color-cream)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors"
              >
                <option value="">Select a service</option>
                <option value="video">Video Production</option>
                <option value="photography">Photography</option>
                <option value="podcast">Podcast Production</option>
                <option value="branding">Branding & Design</option>
                <option value="other">Something else</option>
              </select>
            </div>
            
            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-[var(--color-cream)] mb-2">
                Tell us about your project
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5"
                required
                class="w-full px-4 py-3 bg-[var(--color-slate)] border border-[var(--color-graphite)] rounded-lg text-[var(--color-cream)] placeholder-[var(--color-stone)] focus:border-[var(--color-coral)] focus:ring-1 focus:ring-[var(--color-coral)] transition-colors resize-none"
                placeholder="Share your story, goals, or ideas..."
              ></textarea>
            </div>
            
            <!-- Submit -->
            <button 
              type="submit"
              class="w-full px-8 py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold rounded-lg hover:bg-[var(--color-coral-light)] transition-all duration-300 hover:shadow-xl hover:shadow-[var(--color-coral)]/30"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
