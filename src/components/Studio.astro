---
// Studio gallery section
const studioImages = [
  { src: '/images/studio/studio-exterior-1.jpg', alt: 'Aloha Media Studio exterior' },
  { src: '/images/studio/studio-exterior-2.jpg', alt: 'Aloha Media Studio building' },
  { src: '/images/studio/studio-interior-1.jpg', alt: 'Studio interior workspace' },
  { src: '/images/studio/studio-interior-2.jpg', alt: 'Recording setup' },
  { src: '/images/studio/studio-interior-3.jpg', alt: 'Production area' },
]
---

<section id="studio" class="py-24 md:py-32 bg-[var(--color-void)]">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16" data-animate="fade-up">
      <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
        Our Space
      </p>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--color-cream)] mb-6">
        See the Studio
      </h2>
      <p class="text-[var(--color-mist)] text-lg max-w-2xl mx-auto">
        Located in the heart of Eagle, Idaho. A creative space designed for storytelling.
      </p>
    </div>
    
    <!-- Gallery grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6" data-animate-stagger>
      {studioImages.map((image, index) => (
        <div 
          class:list={[
            "group relative overflow-hidden rounded-2xl cursor-pointer",
            index === 0 ? "col-span-2 row-span-2" : ""
          ]}
          data-animate-child
        >
          <img 
            src={image.src} 
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-void)]/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-4 left-4 right-4 text-[var(--color-cream)] opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-4 group-hover:translate-y-0">
            <p class="text-sm font-medium">{image.alt}</p>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Location callout -->
    <div class="mt-16 text-center" data-animate="fade-up">
      <div class="inline-flex items-center gap-3 px-6 py-3 bg-[var(--color-charcoal)] rounded-full border border-[var(--color-graphite)]">
        <svg class="w-5 h-5 text-[var(--color-coral)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span class="text-[var(--color-mist)]">Eagle, Idaho</span>
      </div>
    </div>
  </div>
</section>
