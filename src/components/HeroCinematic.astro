---
// Cinematic Hero - Full screen self-hosted video background with single CTA

// VideoObject schema for SEO
const videoSchema = {
  "@context": "https://schema.org",
  "@type": "VideoObject",
  "name": "Aloha Media Studio - Professional Podcast Production",
  "description": "See inside our Eagle, Idaho podcast production studio. Full-service podcast creation for business owners and thought leaders.",
  "thumbnailUrl": "https://alohamediastudio.com/images/hero-poster.webp",
  "uploadDate": "2024-01-01",
  "contentUrl": "https://alohamediastudio.com/videos/hero-showreel.mp4",
  "publisher": {
    "@id": "https://alohamediastudio.com/#organization"
  }
}
---

<script type="application/ld+json" set:html={JSON.stringify(videoSchema)} />

<section class="relative h-screen flex items-center justify-center overflow-hidden">
  <!-- Self-hosted Video Background -->
  <div class="absolute inset-0 z-0 pointer-events-none overflow-hidden">
    <video
      autoplay
      muted
      loop
      playsinline
      preload="auto"
      poster="/images/hero-poster.webp"
      class="hero-video"
    >
      <source src="/videos/hero-showreel.mp4" type="video/mp4" />
    </video>
    <!-- Dark overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-void)]/80 via-[var(--color-void)]/60 to-[var(--color-void)]/95"></div>
  </div>

  <!-- Content - Centered, minimal -->
  <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
    <!-- Main headline -->
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-6 leading-[1.05] tracking-tight" data-animate="fade-up">
      <span class="hero-headline">Own Your Niche</span>
    </h1>

    <!-- Brief tagline -->
    <p class="text-lg md:text-xl text-[var(--color-mist)] max-w-md mx-auto mb-4" data-animate="fade-up">
      We produce podcasts that make you the authority in your industry.
    </p>
    <!-- Location tagline -->
    <p class="text-sm text-[var(--color-stone)] mb-10" data-animate="fade-up">
      Professional podcast production in Eagle, Idaho. Serving Boise and the Treasure Valley.
    </p>

    <!-- Single Primary CTA -->
    <a
      href="#contact"
      class="inline-flex items-center gap-3 px-8 py-4 bg-[var(--color-coral)] text-[var(--color-void)] font-semibold text-lg rounded-full transition-all duration-300 hover:bg-[var(--color-coral-light)] hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-coral)]/30"
      data-animate="fade-up"
      data-magnetic
    >
      Start Your Podcast
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:block">
    <a href="#credibility" class="flex flex-col items-center gap-2 text-[var(--color-mist)]/60 hover:text-[var(--color-cream)] transition-colors">
      <span class="text-xs tracking-widest uppercase">Learn More</span>
      <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>

<style>
  .hero-headline {
    color: var(--color-coral);
    text-shadow: 0 0 30px rgba(224, 123, 91, 0.4);
  }

  .hero-video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(1.35);
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 768px) {
    .hero-video {
      transform: translate(-50%, -50%) scale(1.15);
    }
  }
</style>
