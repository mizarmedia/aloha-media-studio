---
// Work Showcase - Featured projects with real client work
const projects = [
  {
    title: "Worth Beyond Wealth",
    client: "YouTube Podcast",
    image: "/images/projects/authorvoice-site.png",
    category: "Podcast Production",
    link: "https://www.youtube.com/@WorthBeyondWealth"
  },
  {
    title: "The Lab",
    client: "Jay Clouse",
    image: "/images/projects/jay-clouse-thumb.jpg",
    category: "Event Recap Video",
    link: "https://youtu.be/wg2JuFpV_74"
  },
  {
    title: "AuthorVoice",
    client: "Website Design & Branding",
    image: "/images/projects/wbw-podcast.png",
    category: "Web Development",
    link: "https://authorvoice.io"
  }
]
---

<section id="work" class="py-24 md:py-32 bg-[var(--color-charcoal)]">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-16">
      <div>
        <p class="text-[var(--color-coral)] text-sm font-medium tracking-widest uppercase mb-4">
          Selected Work
        </p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--color-cream)]">
          Recent Projects
        </h2>
      </div>
      <a
        href="#contact"
        class="text-[var(--color-mist)] hover:text-[var(--color-coral)] transition-colors flex items-center gap-2 group"
      >
        Start your project
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- Projects grid - Clean cards with image above, text below -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10">
      {projects.map((project) => (
        <a
          href={project.link || '#'}
          target={project.link ? '_blank' : undefined}
          rel={project.link ? 'noopener noreferrer' : undefined}
          class={`group block ${project.link ? 'cursor-pointer' : 'cursor-default'}`}
        >
          <!-- Image container -->
          <div class="overflow-hidden rounded-xl mb-5">
            <img
              src={project.image}
              alt={project.title}
              class="w-full aspect-video object-cover object-center transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
            />
          </div>

          <!-- Text content - separate from image -->
          <div class="space-y-2">
            <span class="text-[var(--color-coral)] text-sm font-medium tracking-wider uppercase">
              {project.category}
            </span>
            <h3 class="text-2xl font-bold text-[var(--color-cream)] group-hover:text-[var(--color-coral)] transition-colors">
              {project.title}
            </h3>
            <p class="text-[var(--color-mist)]">
              {project.client}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
